<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ysf_bubble_max_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ysf_tv_logistic_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:text="你的快递单物流信息如下："
        android:textColor="@color/ysf_black_222222"
        android:textSize="@dimen/ysf_text_size_16" />

    <include layout="@layout/ysf_include_divider" />

    <TextView
        android:id="@+id/ysf_tv_logistic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:text="中通快递 运单号:120213123213"
        android:textColor="@color/ysf_black_222222"
        android:textSize="@dimen/ysf_text_size_15" />

    <com.qiyukf.unicorn.widget.ScrollListView
        android:id="@+id/ysf_lv_logistic_transport_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />

    <LinearLayout
        android:id="@+id/ysf_logistic_action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/ysf_include_divider" />

        <TextView
            android:id="@+id/ysf_tv_logistic_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ysf_list_item_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="更多物流信息"
            android:textColor="@color/ysf_grey_999999"
            android:textSize="@dimen/ysf_text_size_14" />
    </LinearLayout>
</LinearLayout>