<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="#11fff1b5" />
            <stroke android:width="@dimen/default_line_height" android:color="@color/default_yellow" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff" />
            <stroke android:width="@dimen/default_line_height" android:color="#cccccc" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>