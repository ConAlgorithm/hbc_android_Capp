<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>

            <solid android:color="#FBFBFB" />

		    <stroke
		        android:dashGap="0dp"
		        android:dashWidth="0dp"
		        android:width="1dp"
		        android:color="#E4E4E4" />
		    
		    <corners android:radius="12dip" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="12dip" />
                
                <stroke
			        android:dashGap="0dp"
			        android:dashWidth="0dp"
			        android:width="1dp"
			        android:color="#E4E4E4" />

                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#FFC300"
                    android:startColor="#FECF27" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dip" />
                
                <stroke
			        android:dashGap="0dp"
			        android:dashWidth="0dp"
			        android:width="1dp"
			        android:color="#E4E4E4" />

                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#FFC300"
                    android:startColor="#FECF27" />
            </shape>
        </clip>
    </item>

</layer-list>