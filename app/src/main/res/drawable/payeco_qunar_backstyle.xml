<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1px"/>

                    <solid android:color="#EAEBED"/>

                    <stroke android:width="1px" android:color="#C8C7CC"/>
                </shape>
            </item>

            <item>
                <bitmap android:antialias="true" android:gravity="center" android:src="@drawable/payeco_backimg"/>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1px"/>

                    <solid android:color="#C8C7CC"/>

                    <stroke android:width="1px" android:color="#C8C7CC"/>
                </shape>
            </item>
            <item>
                <bitmap android:antialias="true" android:gravity="center" android:src="@drawable/payeco_backimg"/>
            </item>
        </layer-list>
    </item>
</selector>