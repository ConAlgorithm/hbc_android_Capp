<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/all_bg_yellow</item>-->
        <!--<item name="colorPrimaryDark">@color/all_bg_yellow</item>-->
        <!--<item name="colorAccent">@color/all_bg_yellow</item>-->
        <item name="colorPrimary">#2d2b24</item>
        <item name="colorPrimaryDark">#2d2b24</item>
        <item name="colorAccent">#2d2b24</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentActionBar">
        <item name="android:actionBarStyle">@style/Widget.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Light.TranslucentActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Widget.Light.ActionBar.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ContentOverlay" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget" />

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse" />

    <style name="Widget.Light" />

    <style name="Widget.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid" />

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Light.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="loading_dialog_style" parent="@style/ContentOverlay">
        <!--    <item name="android:windowAnimationStyle">@style/Animation.Translucent</item> -->
    </style>

    <style name="VersionDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/basic_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ProgressBar_Version" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:minWidth">280dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/progressbar_version</item>
    </style>

    <style name="TabBottomLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabBottomTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/tab_menu_text_color</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabBottomPointStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/home_menu_text_color</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/home_menu_text_color</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ServicerCenterBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/basic_margin_xlarge</item>
        <item name="android:drawablePadding">@dimen/basic_margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/servicer_center_content_color</item>
    </style>

    <style name="dash_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:background">@drawable/dash_line</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/change_mobile_line</item>

    </style>

    <style name="v_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/change_mobile_line</item>
        <item name="android:layout_marginBottom">@dimen/basic_margin_small</item>
        <item name="android:layout_marginTop">@dimen/basic_margin_small</item>
    </style>

    <style name="MimeRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_mime</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:maxHeight">42dp</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@color/assessment_checkbox_label_color</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="settingTxt">
        <item name="android:solidColor">#e8e8e8</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:textColor">#373538</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="orderDetailsCol">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">@color/my_content_text_color</item>
    </style>

    <style name="orderDetailsValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/my_content_text_color</item>
    </style>

    <style name="skuInfoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="skuInfoStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">*</item>
    </style>

    <style name="skuInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="skuInfoArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ente_icon</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="skuInfoEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:editable">false</item>
    </style>

    <style name="skuInfoLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@color/change_mobile_line</item>
    </style>

    <style name="skuInfoNumberLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/textbox</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="skuInfoNumberSub">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/basic_black</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="skuInfoNumberEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">@dimen/basic_margin_small</item>
        <item name="android:paddingRight">@dimen/basic_margin_small</item>
        <item name="android:textColor">@color/change_mobile_text</item>
        <item name="android:textColorHint">@color/change_mobile_hint</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="widget_pick_send_switch">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textOff">""</item><!-- 此设置不需要文字，只显示背景图的开关 -->
        <item name="android:textOn">""</item>
        <item name="android:thumb">@mipmap/pick_send_thumb_img</item><!--滑块格式9.png -->
        <item name="android:track">@drawable/pick_send_track</item><!-- 背景图的开关 格式9.png-->
    </style>

</resources>
