<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/unicorn_view_left_size"
    android:paddingRight="@dimen/unicorn_view_left_size">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/unicorn_order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/default_yellow"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/unicorn_order_state_tv"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unicorn_order_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#111111"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginBottom="@dimen/basic_margin_small"
                android:layout_marginLeft="@dimen/basic_margin_medium"
                android:layout_marginRight="@dimen/basic_margin_medium"
                android:layout_marginTop="@dimen/basic_margin_small"
                android:background="#111111" />

            <TextView
                android:id="@+id/unicorn_order_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#111111"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/unicorn_order_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/unicorn_order_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#999999"
        android:textSize="12sp" />
</LinearLayout>