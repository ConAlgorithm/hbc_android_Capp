<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="140dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_guidance_avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:paddingTop="20dp">

        <net.grobas.view.PolygonImageView
            android:id="@+id/order_guidance_avatar_iv1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_border="true"
            app:poly_border_color="#ffffff"
            app:poly_border_width="0.7dp"
            app:poly_vertices="0" />

        <net.grobas.view.PolygonImageView
            android:id="@+id/order_guidance_avatar_iv2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="-8dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_border="true"
            app:poly_border_color="#ffffff"
            app:poly_border_width="0.7dp"
            app:poly_vertices="0" />

        <net.grobas.view.PolygonImageView
            android:id="@+id/order_guidance_avatar_iv3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="-8dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_border="true"
            app:poly_border_color="#ffffff"
            app:poly_border_width="0.7dp"
            app:poly_vertices="0" />

        <net.grobas.view.PolygonImageView
            android:id="@+id/order_guidance_avatar_iv4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="-8dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_border="true"
            app:poly_border_color="#ffffff"
            app:poly_border_width="0.7dp"
            app:poly_vertices="0" />

        <net.grobas.view.PolygonImageView
            android:id="@+id/order_guidance_avatar_iv5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="-8dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_border="true"
            app:poly_border_color="#ffffff"
            app:poly_border_width="0.7dp"
            app:poly_vertices="0" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_guidance_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="6dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/order_guidance_avatar_layout"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:fontFamily="@font/fzdysjw"
        android:text="Hi\n欢迎您来东京"
        android:textColor="@color/default_black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/order_guidance_subtitle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/order_guidance_avatar_layout"
        android:layout_below="@id/order_guidance_title_tv"
        android:layout_marginTop="6dp"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:text="欢迎您来东京23123123位中文司导"
        android:textColor="@color/default_black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/default_dividing_line" />
</RelativeLayout>