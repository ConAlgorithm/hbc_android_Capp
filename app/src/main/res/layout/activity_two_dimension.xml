<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF7F7F7"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/card_View"
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
         >
         <ImageView
             android:id="@+id/two_dimension_imageView"
             android:layout_width="230dp"
             android:layout_height="230dp"
             android:layout_marginTop="30dp"
             android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/explain"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/two_dimension_imageView"
            android:gravity="center"
            android:textColor="#FF9C9C9C"
            android:text="扫一扫，打开我的邀请页面" />
    </RelativeLayout>

    <TextView
        android:id="@+id/this_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/card_View"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:text="我有600元环保车旅行红包送给你" />


    <TextView
        android:id="@+id/bottom_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/card_View"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/text_size_25"
        android:background="@drawable/shape_rounded_ai_button"
        android:gravity="center"
        android:text="保存图片"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <include layout="@layout/include_header" />


</RelativeLayout>