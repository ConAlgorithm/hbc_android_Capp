<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include
        android:id="@+id/header"
        layout="@layout/include_header" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8eaeb"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:clickable="true"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:minEms="4"
                    android:text="联系人"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/order_contacts"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name_line"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/name_right"
                    android:background="#ededef" />

                <EditText
                    android:id="@+id/name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/name_line"
                    android:layout_toRightOf="@id/name_left"
                    android:gravity="left"
                    android:background="@color/basic_white"
                    android:minEms="4"
                    android:text="请添加联系人"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:minEms="4"
                    android:text="手机号"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hotel_phone_text_code_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/hotel_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入联系方式"
                    android:background="@color/basic_white"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxEms="30"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:clickable="true"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/name1_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:minEms="4"
                    android:text="备用联系人"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name1_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/deleat"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name1_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/name1_del"
                    android:drawableLeft="@mipmap/order_contacts"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name1_line"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/name1_right"
                    android:background="#ededef" />

                <EditText
                    android:id="@+id/name1_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@color/basic_white"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/name1_line"
                    android:layout_toRightOf="@id/name1_left"
                    android:gravity="left"
                    android:minEms="4"
                    android:text="请添加联系人"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:minEms="4"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user1_phone_text_code_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/user1_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/basic_white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入联系方式"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxEms="30"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/user2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:clickable="true"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/name2_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:minEms="4"
                    android:text="备用联系人"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name2_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/deleat"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name2_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/name2_del"
                    android:drawableLeft="@mipmap/order_contacts"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name2_line"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/name2_right"
                    android:background="#ededef" />

                <EditText
                    android:id="@+id/name2_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/name2_line"
                    android:layout_toRightOf="@id/name2_left"
                    android:gravity="left"
                    android:minEms="4"
                    android:text="请添加联系人"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:minEms="4"
                    android:text="手机号"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/user2_phone_text_code_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/user2_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/basic_white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入联系方式"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxEms="30"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/add_other_phone_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20sp"
            android:gravity="center_vertical"
            android:text="@string/add_other_phone"
            android:textColor="#2e82f7"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/basic_white"
            android:layout_marginTop="1dp"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/other_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:minEms="4"
                android:text="为他人订车"
                android:textColor="@color/basic_black"
                android:textSize="14sp" />
            <CheckBox
                android:id="@+id/other_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:button="@drawable/switch_bg"
                android:background="@null"
                android:checked="false"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/other_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:clickable="true"
                android:minHeight="60dp">

                <TextView
                    android:id="@+id/passenger_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:minEms="4"
                    android:text="乘车人"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/passenger_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/order_contacts"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/passenger_line"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/passenger_right"
                    android:background="#ededef" />

                <EditText
                    android:id="@+id/passenger_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/passenger_line"
                    android:layout_toRightOf="@id/passenger_left"
                    android:gravity="left"
                    android:minEms="4"
                    android:text="请添加联系人"
                    android:textColor="#c3c5c5"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:minEms="4"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/passenger_phone_text_code_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/passenger_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/basic_white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入联系方式"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxEms="30"
                    android:textColor="@color/basic_black"
                    android:textColorHint="#c3c5c5"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/basic_white"
                android:layout_marginTop="1dp"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/message_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:minEms="4"
                    android:text="预定后短信通知乘车人"
                    android:textColor="@color/basic_black"
                    android:textSize="14sp" />
                <CheckBox
                    android:id="@+id/message_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/switch_bg"
                    android:background="@null"
                    android:checked="false"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/message_right"
                    android:layout_toRightOf="@id/message_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#abacad"
                    android:minEms="4"
                    android:text="(限国内手机号)"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
    </LinearLayout>