<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/order_detail_info_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/order_detail_info_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/order_detail_travel_info"
            android:textColor="#333333"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/order_detail_info_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/personalcenter_right" />
        <TextView
            android:id="@+id/order_detail_info_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/order_detail_info_arrow_iv"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:text="@string/order_detail"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/order_detail_info_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_detail_info_hint_tv"
            android:layout_toLeftOf="@id/order_detail_info_edit_tv"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:textColor="#333333"
            android:textSize="14sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order_detail_insurance_info_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/order_detail_insurance_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/order_detail_insurance_info"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/order_detail_insurer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_detail_insurance_hint_tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28.2dp"
            android:textColor="#333333"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/order_detail_insurer_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/personalcenter_right" />
        <TextView
            android:id="@+id/order_detail_insurer_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/order_detail_insurer_arrow_iv"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:textSize="13sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/order_detail_insurance_get_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <ImageView
            android:id="@+id/order_detail_insurance_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/order_right"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/order_detail_insurance_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/order_detail_get_insurance"
            android:textColor="#333333"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/order_detail_hbc_pay"
            android:textColor="#999999"
            android:textSize="13sp" />

    </RelativeLayout>
</LinearLayout>