<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/item_menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:textColor="@color/default_black"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/item_menu_arrow_iv"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/item_menu_arrow" />

    <View
        android:id="@+id/item_menu_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_below="@id/item_menu_title_tv"
        android:layout_marginRight="-17dp"
        android:background="@color/default_dividing_line" />

</merge>