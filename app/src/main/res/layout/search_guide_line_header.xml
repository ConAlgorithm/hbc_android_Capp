<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_above_search"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/view_above_search"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="相关司导"
            android:textColor="#7f7f7f"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/more_count_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/icon_more"
            android:gravity="center_vertical"
            android:text="查看全部(236)"
            android:textColor="#ffaf00"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>