<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        style="@style/SkuOrderSubtitleTextView"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:text="@string/order_detail_price" />

    <LinearLayout
        android:id="@+id/order_detail_amount_bill_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:orientation="vertical" />

    <View
        android:id="@+id/order_detail_amount_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_marginLeft="@dimen/order_padding_left"
        android:layout_marginRight="@dimen/order_padding_left"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/default_dividing_line" />

    <LinearLayout
        android:id="@+id/order_detail_amount_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:orientation="vertical"
        android:paddingBottom="30dp" />

    <LinearLayout
        android:id="@+id/order_detail_amount_refund_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/default_bg" />

        <TextView
            style="@style/SkuOrderSubtitleTextView"
            android:paddingLeft="@dimen/order_padding_left"
            android:paddingRight="@dimen/order_padding_left"
            android:text="退款金额" />

        <LinearLayout
            android:id="@+id/order_detail_amount_refund_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:paddingLeft="@dimen/order_padding_left"
            android:paddingRight="@dimen/order_padding_left"
            android:layout_marginRight="17dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/order_detail_amount_refund_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/order_padding_left"
            android:paddingRight="@dimen/order_padding_left"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:minHeight="35dp"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>