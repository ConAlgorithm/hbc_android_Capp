<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <net.grobas.view.PolygonImageView
        android:id="@+id/order_guide_avatar_iv"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@mipmap/icon_avatar_guide"
        app:poly_vertices="0" />

    <TextView
        android:id="@+id/order_guide_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:lineSpacingExtra="2dp"
        android:layout_toRightOf="@id/order_guide_avatar_iv"
        android:textColor="@color/default_black"
        android:textSize="15sp" />

    <View
        android:id="@+id/order_guide_bottom_line_view"
        android:layout_below="@id/order_guide_avatar_iv"
        android:layout_width="match_parent"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="-17dp"
        android:layout_marginRight="-17dp"
        android:layout_height="@dimen/default_line_height"
        android:background="@color/default_dividing_line"
        />
</merge>