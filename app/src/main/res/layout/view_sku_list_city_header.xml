<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/skulist_header_display_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/skulist_header_display_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_img_bg"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <View
            android:id="@+id/skulist_header_count_line_tv"
            android:layout_width="1px"
            android:layout_height="12dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            />
        <TextView
            android:id="@+id/skulist_header_guide_count_tv"
            android:layout_toLeftOf="@id/skulist_header_count_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/skulist_header_route_count_tv"
            android:layout_toRightOf="@+id/skulist_header_count_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/skulist_header_cityname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/skulist_header_cityname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_toRightOf="@id/skulist_header_cityname_tv"
                android:layout_centerVertical="true"
                android:layout_width="11dp"
                android:layout_height="8dp"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/city_top_choose" />
        </RelativeLayout>

        <TextView
            android:id="@+id/skulist_header_cityname_en_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="#333333"
        android:textSize="15sp"
        android:text="@string/sku_list_subtitle_chartered"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        />
</merge>
