<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin_smallx"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/letter_item_order_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_medium"
        android:text="未开始"
        android:textColor="@color/letter_item_order1"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/letter_item_order_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_medium"
        android:text="接机"
        android:textColor="@color/letter_item_time"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/letter_item_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_medium"
        android:text="2016-03-05"
        android:textColor="@color/letter_item_time"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>