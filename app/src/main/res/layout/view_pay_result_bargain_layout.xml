<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_result_bargain_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pay_result_bargain_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/pay_banner_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/pay_result_bargain_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/pay_banner_literals" />
            <View
                android:id="@+id/pay_result_bargain_detail_view"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pay_result_bargain_share_wechat"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@mipmap/pay_banner_wechat" />

            <ImageView
                android:id="@+id/pay_result_bargain_share_moments"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginLeft="60dp"
                android:background="@mipmap/pay_banner_friend" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>