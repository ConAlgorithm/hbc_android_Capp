<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_detail_travel_parrent_layout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/order_padding_left"
        android:layout_marginRight="@dimen/order_padding_left"
        android:layerType="software"
        android:background="@drawable/shape_order_no_dash" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left">

        <TextView
            style="@style/SkuOrderSubtitleTextView"
            android:text="@string/order_detail_travel_title" />

        <TextView
            android:id="@+id/order_detail_travel_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="12dp"
            android:text="@string/order_detail_travel_expand"
            android:textColor="#a8a8a8"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/order_detail_travel_more_iv"
            android:layout_width="11dp"
            android:layout_height="13dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="13.5dp"
            android:layout_toLeftOf="@id/order_detail_travel_more_tv"
            android:background="@mipmap/more_arrow_down" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left">

        <TextView
            android:id="@+id/order_detail_travel_first_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2月8号"
            android:textColor="#a8a8a8"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/order_detail_travel_first_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="2月8号"
            android:textColor="@color/default_black"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/order_detail_travel_second_layout"
        android:layout_width="match_parent"
        android:layout_height="26dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/order_padding_left"
            android:paddingRight="@dimen/order_padding_left">

            <TextView
                android:id="@+id/order_detail_travel_second_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#88161616"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/order_detail_travel_second_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#88161616"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_order_deatil_travel"
            android:layerType="hardware"
            />
    </RelativeLayout>

    <com.hugboga.custom.widget.OrderDetailNoView
        android:id="@+id/order_detail_travel_no_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>