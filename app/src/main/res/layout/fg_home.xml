<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hugboga.custom.widget.HomeBannerView
                android:id="@+id/home_banner_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#5500ff00" />
            <com.hugboga.custom.widget.HomeDynamicView
                android:id="@+id/home_dynamic_view"
                android:layout_width="match_parent"
                android:layout_height="55dp" />
            <com.hugboga.custom.widget.HomeChoicenessRouteView
                android:id="@+id/home_choiceness_route_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.hugboga.custom.widget.HomeBottomLayout
                android:id="@+id/home_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
