<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hugboga.custom.widget.HomeScrollView
        android:id="@+id/home_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.hugboga.custom.widget.HomeBannerView
                android:id="@+id/home_banner_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp" />
            <com.hugboga.custom.widget.HomeDynamicView
                android:id="@+id/home_dynamic_view"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <com.hugboga.custom.widget.HomeChoicenessRouteView
                android:id="@+id/home_choiceness_route_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.hugboga.custom.widget.HomeBottomLayout
                android:id="@+id/home_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.hugboga.custom.widget.HomeScrollView>
    <com.hugboga.custom.widget.HomeSearchView
        android:id="@+id/home_search_view"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/home_view_padding_left"
        android:paddingRight="@dimen/home_view_padding_left"
        android:layout_height="@dimen/home_search_layout_height" />
</RelativeLayout>
