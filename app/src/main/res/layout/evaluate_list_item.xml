<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/evaluate_list_item_line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:visibility="gone"
        android:background="@color/default_dividing_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_marginTop="2dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <net.grobas.view.PolygonImageView
                android:id="@+id/evaluate_list_item_avatar_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dip"
                android:src="@mipmap/collection_icon_pic"
                app:poly_corner_radius="15"
                app:poly_vertices="0" />

            <TextView
                android:id="@+id/evaluate_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/evaluate_list_item_avatar_iv"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/evaluate_list_item_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.5dp"
                android:layout_toRightOf="@id/evaluate_list_item_name_tv"
                android:layout_marginLeft="6dp"
                android:textColor="#808080"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/evaluate_list_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/evaluate_list_item_name_tv"
                android:layout_toRightOf="@id/evaluate_list_item_avatar_iv"
                android:textColor="#808080"
                android:textSize="12sp" />
            <com.hugboga.custom.widget.RatingView
                android:id="@+id/evaluate_list_item_ratingview"
                android:layout_width="wrap_content"
                android:layout_height="12dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:gap="2dip"
                app:rating_bg="@drawable/btn_yellow_ratingbar"
                app:touchable="false" />
        </RelativeLayout>
    <com.hugboga.custom.widget.EvaluateTagGroup
        android:id="@+id/evaluate_list_item_taggroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:horizontalSpacing="15dp"
        app:verticalSpacing="7dp"
        />
    <TextView
        android:id="@+id/evaluate_list_item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#808080"
        android:textSize="14sp" />
    <View
        android:id="@+id/evaluate_list_item_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/default_dividing_line"/>
</merge>