<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eaeb"
    >

    <include layout="@layout/include_header" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="64dp">

        <TextView
            android:id="@+id/man_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/basic_black"
            android:minEms="5"
            android:text="@string/add_user_name_left"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/for_other_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:minEms="4"
            android:text="@string/for_other_people"
            android:drawableRight="@mipmap/personalcenter_right"
            android:drawablePadding="10dp"
            android:textColor="#9a9a9a"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/man_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/for_other_man"
            android:layout_toRightOf="@id/man_phone_name"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/man_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="个人姓名"
                android:minEms="4"
                android:textColor="@color/basic_black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/man_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:hint="手机号"
                android:textColorHint="#9a9a9a"
                android:minEms="4"
                android:textColor="@color/basic_black"
                android:textSize="15sp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/other_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="46dp">

        <TextView
            android:id="@+id/other_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/basic_black"
            android:minEms="5"
            android:text="@string/passenger_no_star"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/other_phone_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/other_phone_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/basic_white"
            android:textColor="@color/basic_black"
            android:singleLine="true"
            android:ellipsize="end"
            android:minEms="4"
            android:hint="请填写乘车人姓名"
            android:textColorHint="#9a9a9a"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pick_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="46dp">

        <TextView
            android:id="@+id/pick_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/basic_black"
            android:minEms="5"
            android:text="@string/pick_name_star"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/pick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pick_name_left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:background="@color/basic_white"
            android:textColor="@color/basic_black"
            android:singleLine="true"
            android:ellipsize="end"
            android:minEms="4"
            android:hint="请填写接机牌姓名"
            android:textColorHint="#9a9a9a"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/single_no_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="46dp">

        <TextView
            android:id="@+id/up_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/basic_black"
            android:minEms="5"
            android:text="@string/up_time"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/up_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/up_left"
            android:paddingRight="15dp"
            android:gravity="left|center_vertical"
            android:hint="@string/local_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:minEms="4"
            android:textColor="@color/basic_black"
            android:textSize="15sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/single_no_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="46dp">

        <TextView
            android:id="@+id/up_address_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/basic_black"
            android:minEms="5"
            android:text="@string/up_site"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/up_address_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/up_address_left"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:hint="@string/aboard_where"
            android:textColorHint="#9a9a9a"
            android:minEms="4"
            android:textColor="@color/basic_black"
            android:textSize="15sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hotel_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:minEms="5"
            android:textColor="@color/basic_black"
            android:gravity="center_vertical"
            android:text="@string/hotel_phone" />

        <TextView
            android:id="@+id/hotel_phone_text_code_click"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/basic_black"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColorHint="#9a9a9a"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/add_user_phone_area_no"
            android:lines="1" />

        <View
            android:id="@+id/hotel_phone_line_view"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="#e8eaeb" />

        <EditText
            android:id="@+id/hotel_phone_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@null"
            android:textColorHint="#9a9a9a"
            android:layout_marginRight="10dp"
            android:textColor="@color/basic_black"
            android:ellipsize="end"
            android:maxEms="30"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:hint="@string/hotel_phone"
            android:lines="1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/airport_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="46dp">

        <TextView
            android:id="@+id/airpost_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/basic_black"
            android:minEms="5"
            android:text="起飞航班"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/airport_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/airpost_name_left"
            android:layout_marginLeft="10dp"
            android:background="@color/basic_white"
            android:textColor="@color/basic_black"
            android:minEms="4"
            android:textColorHint="#9a9a9a"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="请输入起飞航班号"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:minHeight="50dp"
        android:gravity="left|top"
        android:background="@color/basic_white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:minEms="5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/basic_black"
            android:text="@string/edit_mark_left" />
        <EditText
            android:id="@+id/mark"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textColor="@color/basic_black"
            android:layout_height="wrap_content"
            android:textColorHint="#9a9a9a"
            android:textSize="15sp"
            android:maxLength="200"
            android:background="@null"
            android:gravity="left|top"
            android:hint="@string/edit_mark" />
    </LinearLayout>


</LinearLayout>