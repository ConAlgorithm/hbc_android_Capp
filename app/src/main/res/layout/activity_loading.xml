<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hugboga.custom.LoadingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_01"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/show_ad"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/bottom_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/basic_margin_medium"
        android:text="@string/loading_msg"
        android:textColor="@color/basic_white"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/time_second"
        android:layout_width="60dp"
        android:layout_alignParentRight="true"
        android:text=""
        android:background="@drawable/loading_time_bg"
        android:gravity="center"
        android:textColor="@color/basic_white"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="30dp" />

</RelativeLayout>
