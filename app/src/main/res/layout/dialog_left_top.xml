<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="130dp"
    android:background="@drawable/play_down">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
       android:weightSum="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_text_share"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableLeft="@mipmap/play_down_share"
            android:text="分享"
            android:layout_gravity="center"
            android:layout_weight="45"
            android:gravity="center"
            android:drawablePadding="@dimen/text_size_17"
            android:textColor="@color/basic_black"
            android:textSize="@dimen/ysf_text_size_19" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="10">
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:background="@color/ysf_grey_b3b3b3"
                android:layout_height="1dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_text_chat"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableLeft="@drawable/selector_dalog_message"
            android:drawablePadding="@dimen/text_size_17"
            android:text="消息"
            android:textColor="@color/basic_black"
            android:textSize="@dimen/ysf_text_size_19" />
    </LinearLayout>

</FrameLayout>