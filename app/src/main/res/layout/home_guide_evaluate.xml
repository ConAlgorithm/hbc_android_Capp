<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_evaluate"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/filter_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/home_guide_comment"
            android:textColor="#151515"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/filter_guide_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:drawableRight="@mipmap/home_airport_transportation"
            android:drawablePadding="5dp"
            android:text="@string/more"
            android:textColor="#000000"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/evaluate_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/evaluate_img_layout"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/evaluate_content"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="4dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#151515"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp">

                    <net.grobas.view.PolygonImageView
                        android:id="@+id/avr"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        android:src="@color/all_bg_yellow"
                        app:poly_border="false"
                        app:poly_border_color="@android:color/white"
                        app:poly_border_width="5dp"
                        app:poly_corner_radius="5"
                        app:poly_rotation_angle="25"
                        app:poly_shadow="false"
                        app:poly_shadow_color="@android:color/black"
                        app:poly_vertices="0" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/avr"
                        android:text="zhangqiang"
                        android:textColor="#151515"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/evaluate_img_layout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp">

                <ImageView
                    android:id="@+id/evaluate_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="#f5f5f5" />

                <TextView
                    android:id="@+id/img_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/home_guide_comment_img"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </FrameLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp">


            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guide_evulate_bg"
                android:drawableLeft="@mipmap/position_icon"
                android:drawablePadding="4dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text=""
                android:textColor="#e98100"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/guide_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/guide_evulate_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:layout_marginTop="-2dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_guide_service"
                    android:textColor="#151515"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/guideName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/service"
                    android:ellipsize="end"
                    android:maxLength="5"
                    android:text="zhangqiang"
                    android:textColor="#e98100"
                    android:textSize="12sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/serviceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:background="@drawable/guide_evulate_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:text=""
                android:textColor="#151515"
                android:textSize="12sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/location_layout"/>
    </RelativeLayout>

</LinearLayout>