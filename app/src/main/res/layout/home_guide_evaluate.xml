<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_evaluate"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/filter_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="游客说"
            android:textColor="#4a4a4a"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/filter_guide_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/home_icon_back"
            android:text="更多"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/evaluate_content_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.grobas.view.PolygonImageView
                android:id="@+id/avr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/all_bg_yellow"
                android:scaleType="centerCrop"
                android:layout_marginLeft="16dp"
                app:poly_border="false"
                app:poly_border_color="@android:color/white"
                app:poly_border_width="5dp"
                app:poly_corner_radius="5"
                app:poly_rotation_angle="25"
                app:poly_shadow="false"
                app:poly_shadow_color="@android:color/black"
                app:poly_vertices="0"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avr"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zhangqiang"
                    android:textSize="14sp"
                    android:textColor="#151515"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务司导"
                        android:textSize="10sp"
                        android:textColor="#929292"/>

                    <TextView
                        android:id="@+id/guideName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/service"
                        android:layout_marginLeft="3dp"
                        android:text="zhangqiang"
                        android:textSize="10sp"
                        android:maxLength="5"
                        android:ellipsize="end"
                        android:textColor="#4a4a4a"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="埃塞俄比亚"
                        android:textColor="#61b09e"
                        android:drawableLeft="@mipmap/home_guide_location"
                        android:drawablePadding="4dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="10sp"
                        android:background="@drawable/guide_evulate_bg"/>

                    <TextView
                        android:id="@+id/serviceType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/location"
                        android:layout_marginLeft="6dp"
                        android:text="接机服务"
                        android:textColor="#929292"
                        android:textSize="10sp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/filter_guide_yuding"/>


                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/evaluate_content"
                android:layout_width="wrap_content"
                android:layout_height="92dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:gravity="left"
                android:layout_toLeftOf="@+id/evaluate_img_layout"
                android:layout_marginRight="16dp"
                android:text="这次的旅行实在是舒适了，主要找了一个特别靠谱的司导，全程贴心服务，吃遍了各种地道的当地食物，去景点吃了好多的好吃的好吃的多好…"
                android:textColor="#6a6a6a"
                android:textSize="14sp"/>

            <FrameLayout
                android:id="@+id/evaluate_img_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp">
                <ImageView
                    android:id="@+id/evaluate_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="#f5f5f5"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/img_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="3dp"
                    android:text="图"
                    android:textColor="#ffffff"
                    android:textSize="12sp"/>
            </FrameLayout>


        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>