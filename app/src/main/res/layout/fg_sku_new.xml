<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e1e2"
    android:clickable="true"
    android:orientation="vertical">
    <include android:id="@+id/header_layout_new" layout="@layout/include_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout_new"
        android:layout_above="@+id/bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:layout_width="wrap_content"
                android:minHeight="60dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sku_title"
                    android:textSize="18sp"
                    android:layout_margin="15dp"
                    android:textColor="@color/basic_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sku_day"
                    android:layout_below="@id/sku_title"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#949596"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sku_city_hotel"
                    android:layout_below="@id/sku_title"
                    android:layout_toRightOf="@id/sku_day"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#949596"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sku_city_line"
                    android:layout_below="@id/sku_title"
                    android:layout_toRightOf="@id/sku_city_hotel"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#949596"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_starttime"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:layout_width="wrap_content"
                android:minHeight="60dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time_left"
                    android:text="@string/sku_go_date"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:minEms="4"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_toRightOf="@id/time_left"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_text"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:textColorHint="#9d9e9f"
                        android:hint="@string/sku_go_date_tips"
                        android:textColor="@color/basic_black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/time_text_start_end"
                android:textSize="13sp"
                android:paddingLeft="20dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:text="起止日期:"
                android:textColorHint="#9d9e9f"
                android:hint="@string/sku_go_date_tips"
                android:background="#fafadd"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/show_cars_layout_sku"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/include_pick_send_bottom_bar" />
</RelativeLayout>