<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/search_hot_city_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_hot_city_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#25000000"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="曼谷"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_hot_city_img"
        app:layout_constraintEnd_toEndOf="@+id/search_hot_city_img"
        app:layout_constraintStart_toStartOf="@+id/search_hot_city_img"
        app:layout_constraintTop_toTopOf="@+id/search_hot_city_img" />

</android.support.constraint.ConstraintLayout>