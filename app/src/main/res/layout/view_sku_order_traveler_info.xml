<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sku_order_padding_left"
        android:layout_marginRight="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_title_tv"
            style="@style/SkuOrderSubtitleTextView"
            android:text="出行信息" />

        <TextView
            android:id="@+id/sku_order_traveler_info_contacts_choose_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginTop="11.8dp"
            android:text="为他人订车"
            android:textColor="#7f7f7f"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/sku_order_traveler_info_contacts_choose_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/sku_order_traveler_info_contacts_choose_tv"
            android:background="@drawable/checkbox_sku_order_multi" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_contacts_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-10dp"
            android:paddingTop="3dp"
            android:text="*"
            android:textColor="#f56363"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_contacts_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="80dp"
            android:text="联系人"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_address_book_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="#42c6e2"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sku_order_traveler_info_address_book_iv"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="0.5dp"
            android:layout_toLeftOf="@id/sku_order_traveler_info_address_book_tv"
            android:background="@mipmap/icon_order_contacts" />

        <EditText
            android:id="@+id/sku_order_traveler_info_contacts_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/sku_order_traveler_info_address_book_iv"
            android:layout_toRightOf="@id/sku_order_traveler_info_contacts_hint_tv"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请填写真实姓名"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_phone_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-10dp"
            android:paddingTop="3dp"
            android:text="*"
            android:textColor="#f56363"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_phone_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="80dp"
            android:text="手机号"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/sku_order_traveler_info_phone_hint_tv"
            android:gravity="center_vertical"
            android:minWidth="25dp"
            android:text="+86"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sku_order_traveler_info_code_arrow_iv"
            android:layout_width="8dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/sku_order_traveler_info_code_tv"
            android:background="@mipmap/icon_black_arrow" />

        <View
            android:layout_width="@dimen/default_line_height"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sku_order_traveler_info_code_arrow_iv"
            android:background="@color/default_dividing_line" />

        <EditText
            android:id="@+id/sku_order_traveler_info_phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:layout_toRightOf="@id/sku_order_traveler_info_code_arrow_iv"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请填写手机号"
            android:inputType="phone"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_other_contacts_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        android:paddingLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_other_contacts_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-10dp"
            android:paddingTop="3dp"
            android:text="*"
            android:textColor="#f56363"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_other_contacts_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="80dp"
            android:text="乘车人"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_other_address_book_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="#42c6e2"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sku_order_traveler_info_other_address_book_iv"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="0.5dp"
            android:layout_toLeftOf="@id/sku_order_traveler_info_other_address_book_tv"
            android:background="@mipmap/icon_order_contacts" />

        <EditText
            android:id="@+id/sku_order_traveler_info_other_contacts_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/sku_order_traveler_info_other_address_book_iv"
            android:layout_toRightOf="@id/sku_order_traveler_info_other_contacts_hint_tv"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请填写真实姓名"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_other_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        android:paddingLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_other_phone_star_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-10dp"
            android:paddingTop="3dp"
            android:text="*"
            android:textColor="#f56363"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_other_phone_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="80dp"
            android:text="手机号"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_other_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/sku_order_traveler_info_other_phone_hint_tv"
            android:gravity="center_vertical"
            android:minWidth="25dp"
            android:text="+86"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sku_order_traveler_info_other_code_arrow_iv"
            android:layout_width="8dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/sku_order_traveler_info_other_code_tv"
            android:background="@mipmap/icon_black_arrow" />

        <View
            android:layout_width="@dimen/default_line_height"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sku_order_traveler_info_other_code_arrow_iv"
            android:background="@color/default_dividing_line" />

        <EditText
            android:id="@+id/sku_order_traveler_info_other_phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:layout_toRightOf="@id/sku_order_traveler_info_other_code_arrow_iv"
            android:background="#00000000"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请填写手机号"
            android:inputType="phone"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_flight_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:layout_marginLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_flight_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="起飞航班"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/sku_order_traveler_info_flight_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_toRightOf="@id/sku_order_traveler_info_flight_hint_tv"
            android:hint="告诉司导航班号，出行省心"
            android:singleLine="true"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_checkin_layout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:layout_marginLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_checkin_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="举牌接机"
            android:textColor="@color/default_black"
            android:textSize="14sp" />
        <com.sevenheaven.iosswitch.ShSwitchView
            android:id="@+id/sku_order_traveler_info_checkin_switch_view"
            android:layout_width="58dip"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"
            app:tintColor="@color/default_yellow"
            app:shadowSpace="7dip"/>
        <TextView
            android:id="@+id/sku_order_traveler_info_checkin_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:layout_toLeftOf="@id/sku_order_traveler_info_checkin_switch_view"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:textColor="#ff2525"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/sku_order_traveler_info_checkin_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/sku_order_traveler_info_checkin_price_tv"
            android:layout_toRightOf="@id/sku_order_traveler_info_checkin_hint_tv"
            android:singleLine="true"
            android:background="#00000000"
            android:hint="接机牌姓名"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_start_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:layout_marginLeft="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_traveler_info_start_time_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="上车时间"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.6dp"
            android:layout_toRightOf="@id/sku_order_traveler_info_start_time_hint_tv"
            android:hint="09:00 (当地时间)"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_start_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sku_order_padding_left"
        android:minHeight="@dimen/sku_order_min_item_hight">

        <TextView
            android:id="@+id/sku_order_traveler_info_start_address_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="上车地点"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sku_order_traveler_info_start_address_arrow_iv"
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:background="@mipmap/ente_icon" />

        <TextView
            android:id="@+id/sku_order_traveler_info_start_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14.6dp"
            android:layout_toLeftOf="@id/sku_order_traveler_info_start_address_arrow_iv"
            android:layout_toRightOf="@id/sku_order_traveler_info_start_address_hint_tv"
            android:hint="请添加上车地点"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sku_order_traveler_info_start_address_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sku_order_traveler_info_start_address_tv"
            android:layout_marginBottom="13dp"
            android:layout_toLeftOf="@id/sku_order_traveler_info_start_address_arrow_iv"
            android:layout_toRightOf="@id/sku_order_traveler_info_start_address_hint_tv"
            android:paddingTop="2dp"
            android:textColor="#cccccc"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sku_order_traveler_info_wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sku_order_min_item_hight"
        android:layout_marginLeft="@dimen/sku_order_padding_left">

        <View
            android:id="@+id/sku_order_traveler_info_start_address_line_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:background="@color/default_dividing_line" />

        <TextView
            android:id="@+id/sku_order_traveler_info_wechat_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="微信号"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/sku_order_traveler_info_wechat_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:layout_toRightOf="@id/sku_order_traveler_info_wechat_hint_tv"
            android:hint="可填写微信号作为备用联系方式"
            android:singleLine="true"
            android:layout_marginRight="@dimen/sku_order_padding_left"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sku_order_padding_left"
        android:minHeight="@dimen/sku_order_min_item_hight">

        <TextView
            android:id="@+id/sku_order_traveler_info_mark_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sku_order_min_item_hight"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="备注"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/sku_order_traveler_info_mark_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/sku_order_traveler_info_mark_hint_tv"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:hint="如有其他需求，请在这里给司导留言"
            android:maxLength="500"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@color/default_black"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>