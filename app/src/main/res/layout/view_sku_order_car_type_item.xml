<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:paddingLeft="@dimen/sku_order_padding_left"
    android:paddingTop="12dp">

    <ImageView
        android:id="@+id/sku_order_car_type_item_choose_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/checkbox_sku_order_single" />

    <TextView
        android:id="@+id/sku_order_car_type_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/sku_order_padding_left"
        android:layout_marginTop="1dp"
        android:textColor="@color/default_price_red"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sku_order_car_type_original_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/sku_order_car_type_price_tv"
        android:textColor="#A8A8A8"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sku_order_car_type_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/sku_order_car_type_original_price_tv"
        android:layout_toRightOf="@id/sku_order_car_type_item_choose_iv"
        android:textColor="@color/default_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sku_order_car_type_seat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sku_order_car_type_title_tv"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/sku_order_car_type_item_choose_iv"
        android:textColor="#09D3AF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/sku_order_car_type_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sku_order_car_type_seat_tv"
        android:layout_marginRight="@dimen/sku_order_padding_left"
        android:layout_toRightOf="@+id/sku_order_car_type_item_choose_iv"
        android:paddingTop="2dp"
        android:textColor="#848484"
        android:textSize="12sp" />

    <HorizontalScrollView
        android:id="@+id/sku_order_car_pic_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sku_order_car_type_description_tv"
        android:layout_toRightOf="@id/sku_order_car_type_item_choose_iv"
        android:paddingBottom="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/sku_order_car_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="7dp"></LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/sku_order_car_type_bottom_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_below="@id/sku_order_car_pic_scrollview"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="12dp"
        android:background="@color/default_dividing_line" />

    <View
        android:id="@+id/sku_order_car_type_bottom_line_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_below="@id/sku_order_car_type_description_tv"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="12dp"
        android:background="@color/default_dividing_line" />
</RelativeLayout>