<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <com.hugboga.custom.widget.DeliverCircleProgressView
        android:id="@+id/deliver_countdown_progress_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/deliver_countdown_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:isHideTimeBackground="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowTimeBgDivisionLine="false"
        app:suffixGravity="bottom"
        app:suffixLRMargin="2dp"
        app:suffixTextColor="#191919"
        app:suffixTextSize="14sp"
        app:isSuffixTextBold="true"
        app:timeTextColor="#191919"
        app:timeTextSize="14sp"
        app:isTimeTextBold="true"
        />
</RelativeLayout>