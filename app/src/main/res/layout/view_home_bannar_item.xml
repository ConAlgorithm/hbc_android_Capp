<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="#11000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_banner_desplay_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#3300ff00"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/home_banner_title_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:text="去非洲尽情撒野？你敢来吗？"
        android:textColor="@color/basic_black"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <net.grobas.view.PolygonImageView
            android:id="@+id/home_banner_avatar_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_vertices="0" />

        <ImageView
            android:id="@+id/home_banner_avatar_icon_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginBottom="2dp"
            android:layout_alignLeft="@id/home_banner_avatar_iv"
            android:layout_alignBottom="@id/home_banner_avatar_iv"
            android:background="#330000ff"/>

        <LinearLayout
            android:id="@+id/home_banner_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4a4a4a"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="已认证"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="4dp"
                android:text="流川枫"
                android:textColor="@color/basic_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="北海盗经商生活12年"
                android:textColor="#727272"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_banner_name_layout"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="北海盗经商生活12年"
            android:textColor="#727272"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>