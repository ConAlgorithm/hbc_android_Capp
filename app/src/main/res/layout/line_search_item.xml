<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/pic_line"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/payment_success"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="14dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title_line_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="【魅力西欧】意大利法南深度经典12日中文包魅力西欧】意大利法南深度经典12日中文包魅力西欧】意大利法南深度经典12日中文包"
                android:textColor="#111111"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/location_line_search"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/city_location"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/search_line_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/location_line_search"
                    android:layout_marginLeft="3dp"
                    android:text="罗马-意大利"
                    android:textColor="#7f7f7f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/price_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥568起/人"
                    android:textColor="#ff2525"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>