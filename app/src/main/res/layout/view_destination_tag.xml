<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="26dp">

        <View
            android:layout_width="2.2dp"
            android:layout_height="13dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2.2dp"
            android:background="@color/default_black" />

        <TextView
            android:id="@+id/view_destination_tag_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/fzdysjw"
            android:textColor="@color/default_black"
            android:textSize="13sp" />
    </LinearLayout>

    <com.hugboga.custom.widget.TagGroup
        android:id="@+id/view_destination_tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalSpacing="10dp"
        app:isCenter="false"
        app:verticalSpacing="10dp" />

</LinearLayout>