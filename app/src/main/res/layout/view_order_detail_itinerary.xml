<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="17dp"
    android:paddingRight="17dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="6dp"
            android:text="@string/order_detail_itinerary"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_itinerary_carpool_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_order_itinerary_carpool"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="11dp"
            android:paddingRight="10dp"
            android:paddingTop="3.5dp"
            android:text="@string/order_detail_carpooling"
            android:textColor="#fdd631"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_itinerary_route_layout"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="115dp">
        <net.grobas.view.PolygonImageView
            android:id="@+id/order_itinerary_route_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:poly_corner_radius="15"
            app:poly_vertices="2" />
        <TextView
            android:id="@+id/order_itinerary_route_tv"
            android:layout_toRightOf="@id/order_itinerary_route_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:textColor="#333333"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/order_itinerary_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line" />

    <TextView
        android:id="@+id/order_itinerary_order_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:textSize="15sp" />
</LinearLayout>