<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical">

            <net.grobas.view.PolygonImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_avatar_guide"
                app:poly_vertices="0"/>
            <net.grobas.view.PolygonImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon_woman"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                app:poly_vertices="0"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="14dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/search_guide_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zhangqiang"
                    android:textColor="#111111"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/city_location"
                    android:scaleType="centerCrop"
                    android:layout_toRightOf="@+id/name"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/search_guide_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:text="大阪-日本"
                    android:textColor="#7f7f7f"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/guide_uncheck_label"
                    android:scaleType="centerCrop"
                    android:layout_toRightOf="@+id/name"
                    />

                <TextView
                    android:id="@+id/label_search_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="医疗.品酒师.建筑设计师医疗.品酒师.建筑设计师医疗.品酒师.建筑设计师"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#7f7f7f"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dbdbdb"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>