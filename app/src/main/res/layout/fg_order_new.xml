<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eaeb"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/include_header" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@id/header"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8eaeb"
            android:orientation="vertical">

            <com.hugboga.custom.widget.TopTipsLayout
                android:id="@+id/top_tips_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/basic_white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/sku_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:background="@color/basic_white"
                        android:minHeight="60dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/sku_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:textColor="@color/basic_black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sku_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sku_title"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="#949596"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/sku_city_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sku_title"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@id/sku_day"
                            android:textColor="#949596"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_below="@id/sku_city_line"
                            android:background="#e8eaeb" />


                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/basic_white"
                        android:text="@string/my_travel_title"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/citys_line_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/basic_white"
                        android:drawableLeft="@mipmap/order_time"
                        android:drawablePadding="10dp"
                        android:text="@string/my_travel_title"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/citys_line_title_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/basic_white"
                        android:text="@string/my_travel_title"
                        android:textColor="#c3c5c5"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:id="@+id/show_day_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="#fdfed8"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/day_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"></LinearLayout>

                        <TextView
                            android:id="@+id/day_show_all"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:drawableLeft="@mipmap/journey_unfold"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="@string/show_all_info"
                            android:textColor="@color/basic_black"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/start_hospital_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/basic_white"
                        android:drawableLeft="@mipmap/order_place"
                        android:drawablePadding="10dp"
                        android:text="@string/my_travel_title"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/start_hospital_title_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/basic_white"
                        android:text="@string/my_travel_title"
                        android:textColor="#c3c5c5"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/end_hospital_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/basic_white"
                        android:drawableLeft="@mipmap/order_flag"
                        android:drawablePadding="10dp"
                        android:text="@string/my_travel_title"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/end_hospital_title_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/basic_white"
                        android:text="@string/my_travel_title"
                        android:textColor="#c3c5c5"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/basic_white">

                        <TextView
                            android:id="@+id/car_seat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@mipmap/order_car"
                            android:drawablePadding="10dp"
                            android:text="@string/my_travel_title"
                            android:textColor="@color/basic_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/car_seat_tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/my_travel_title"
                            android:textColor="#c3c5c5"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <com.hugboga.custom.widget.LuggageItemLayout
                        android:id="@+id/luggage_item_layout"
                        android:layout_width="match_parent"
                        android:paddingLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/checkin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/basic_white"
                        android:drawableLeft="@mipmap/order_jp"
                        android:drawablePadding="10dp"
                        android:text="接机举牌等待"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <TextView
                        android:id="@+id/man_phone_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:text="@string/add_user_name_left"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/for_other_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/personalcenter_right"
                        android:gravity="center"
                        android:minEms="4"
                        android:paddingRight="15dp"
                        android:text="@string/for_other_people"
                        android:textColor="#c3c5c5"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/man_phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/man_phone_name"
                        android:layout_toEndOf="@+id/man_phone_name">


                        <TextView
                            android:id="@+id/man_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:minEms="4"
                            android:lines="1"
                            android:ellipsize="end"
                            android:text="@string/air_info"
                            android:textColor="@color/basic_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/man_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:minEms="4"
                            android:ellipsize="end"
                            android:text="@string/air_info"
                            android:textColor="#9d9e9f"
                            android:textSize="14sp" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/other_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/other_phone_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:text="@string/passenger_no_star"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:id="@+id/other_phone_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/other_phone_name"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">


                        <TextView
                            android:id="@+id/other_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:minEms="4"
                            android:text="@string/air_info"
                            android:textColor="@color/basic_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/other_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:minEms="4"
                            android:text="@string/air_info"
                            android:textColor="#9d9e9f"
                            android:textSize="14sp" />


                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pick_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <TextView
                        android:id="@+id/pick_name_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:text="@string/pick_name_star"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/pick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/pick_name_left"
                        android:background="@color/basic_white"
                        android:hint="请填写接机牌姓名"
                        android:minEms="4"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/airport_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/airpost_name_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:text="起飞航班"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/airport_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/airpost_name_left"
                        android:background="@color/basic_white"
                        android:hint="请输入起飞航班号,方便司导协助"
                        android:minEms="4"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/single_no_show_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <TextView
                        android:id="@+id/up_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:text="@string/up_time"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/up_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/up_left"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/personalcenter_right"
                        android:gravity="left|center_vertical"
                        android:hint="@string/local_time"
                        android:minEms="4"
                        android:paddingRight="15dp"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/single_no_show_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <TextView
                        android:id="@+id/up_address_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:text="@string/up_site"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/up_address_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/up_address_left"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/personalcenter_right"
                        android:gravity="left|center_vertical"
                        android:hint="@string/aboard_where"
                        android:minEms="4"
                        android:paddingRight="15dp"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/hospital_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20sp"
                        android:gravity="center_vertical"
                        android:text="@string/hotel_phone"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/hotel_phone_text_code_click"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="@string/add_user_phone_area_no"
                        android:lines="1"
                        android:textColor="@color/basic_black"
                        android:textColorHint="#c3c5c5"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:background="#e8eaeb" />

                    <EditText
                        android:id="@+id/hotel_phone_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="@string/hotel_phone"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxEms="30"
                        android:textColor="@color/basic_black"
                        android:textColorHint="#c3c5c5"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/basic_white"
                    android:gravity="left|top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:minEms="4"
                        android:text="@string/edit_mark_left"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/mark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:gravity="left|top"
                        android:hint="@string/edit_mark"
                        android:maxLength="200"
                        android:textColor="@color/basic_black"
                        android:textColorHint="#c3c5c5"
                        android:textSize="14sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <RadioButton
                        android:id="@+id/coupon_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@color/basic_white"
                        android:checked="true"
                        android:minEms="4"
                        android:text="@string/my_coupon"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/coupon_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="10dp"
                        android:drawableRight="@mipmap/personalcenter_right"
                        android:gravity="center"
                        android:minEms="4"
                        android:paddingRight="15dp"
                        android:textColor="#c3c5c5"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <RadioButton
                        android:id="@+id/dream_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@color/basic_white"
                        android:minEms="4"
                        android:text="@string/dream_money"
                        android:textColor="@color/basic_black"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <com.hugboga.custom.widget.MoneyTextView
                            android:id="@+id/dream_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:textColor="#ec866d"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dream_right_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:drawablePadding="10dp"
                            android:drawableRight="@mipmap/personalcenter_right"
                            android:minEms="4"
                            android:text="如何赚取基金?"
                            android:textColor="#c3c5c5"
                            android:textSize="12sp" />


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/basic_white"
                    android:clickable="true"
                    android:minHeight="60dp">

                    <TextView
                        android:id="@+id/insure_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:drawableLeft="@mipmap/order_right"
                        android:drawablePadding="10dp"
                        android:minEms="4"
                        android:text="@string/insure_8wan"
