<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eaeb"
    android:orientation="vertical">
    <include android:id="@+id/header" layout="@layout/include_header" />
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8eaeb"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:text="Medium Text" />

            <TextView
                android:id="@+id/travel_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableLeft="@mipmap/icon_pay1"
                android:drawablePadding="10dp"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:text="Medium Text" />

            <TextView
                android:id="@+id/travel_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/icon_pay1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Medium Text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/add_user_name_left" />

                <EditText
                    android:id="@+id/order_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/add_user_name"
                    android:lines="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#e8eaeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/add_user_phone_left" />

                <TextView
                    android:id="@+id/area_code_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/add_user_phone"
                    android:lines="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/phone2_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#e8eaeb" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/phone2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/area_code_2_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/user_phone_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/add_user_phone"
                    android:lines="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/phone3_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#e8eaeb" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/phone3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/area_code_3_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/user_phone_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/add_user_phone"
                    android:lines="1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:id="@+id/checkbox_other"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20sp"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="@string/for_other_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/add_other_phone_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/add_other_phone"
                    android:textColor="#2e82f7"
                    android:layout_marginRight="20sp"/>

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/for_other_people_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/basic_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:textSize="18sp"
                        android:layout_marginLeft="20sp"
                        android:gravity="center_vertical"
                        android:text="@string/passenger" />

                    <EditText
                        android:id="@+id/order_user_name_other"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="@string/add_passenger"
                        android:lines="1" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/basic_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20sp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:text="@string/add_user_phone_left" />

                    <TextView
                        android:id="@+id/area_code_other_click"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:hint="@string/add_user_phone_area_no"
                        android:lines="1" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:background="#e8eaeb" />

                    <EditText
                        android:id="@+id/user_phone_other"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:hint="@string/passenger_phone"
                        android:lines="1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/up_time" />

                <TextView
                    android:id="@+id/up_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:hint="@string/local_time"
                    android:lines="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#e8eaeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/up_site" />

                <EditText
                    android:id="@+id/up_site_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/aboard_where"
                    android:lines="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#e8eaeb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20sp"
                    android:gravity="center_vertical"
                    android:text="@string/hotel_phone" />

                <TextView
                    android:id="@+id/hotel_phone_text_code_click"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/add_user_phone_area_no"
                    android:lines="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="#e8eaeb" />

                <EditText
                    android:id="@+id/hotel_phone_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="@string/hotel_phone"
                    android:lines="1" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#b0b1b3"
                android:text="@string/order_tips" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/basic_black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_order"
            android:layout_marginLeft="20sp"
            android:textColor="@color/basic_white"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/all_money_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000元"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@id/all_money_left"
            android:textColor="#f8ca18"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:id="@+id/all_money_left_text"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:text="@string/submit_order"
            android:layout_marginLeft="10sp"
            android:textColor="@color/basic_white"
            android:textSize="22sp"
            android:gravity="center"
            android:background="#f8ca18"
            android:layout_centerVertical="true"
            android:id="@+id/all_money_submit_click"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_info"
            android:layout_toLeftOf="@id/all_money_submit_click"
            android:textColor="@color/basic_white"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:id="@+id/all_money_info"/>
    </RelativeLayout>

</RelativeLayout>