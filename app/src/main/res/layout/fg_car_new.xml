<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/car_layout"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/have_data_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include layout="@layout/include_fg_pick_send_car" />

        <include layout="@layout/include_fg_pick_send_man" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:background="#e0e1e2"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:src="@mipmap/error_show" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dip"
            android:text="很抱歉\n所选时间无法提供服务\n建议提早预订" />
    </LinearLayout>
</LinearLayout>