<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/title_recomment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/filter_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="推荐线路"
            android:textColor="#4a4a4a"
            android:textSize="17sp" />


        <TextView
            android:id="@+id/filter_guide_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:drawablePadding="4dp"
            android:drawableRight="@mipmap/home_icon_back"
            android:gravity="center_vertical"
            android:text="更多"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />


    </RelativeLayout>

    <com.tmall.ultraviewpager.UltraViewPager
        android:id="@+id/ultra_viewpager"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/des1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="深度瑞士｜瑞士全景环游之路超豪华 8日包车游特别好玩啊好好玩"
            android:textColor="#4a4a4a"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <net.grobas.view.PolygonImageView
                android:id="@+id/avr"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:src="@color/all_bg_yellow"
                app:poly_border="false"
                app:poly_border_color="@android:color/white"
                app:poly_border_width="5dp"
                app:poly_corner_radius="5"
                app:poly_rotation_angle="25"
                app:poly_shadow="false"
                app:poly_shadow_color="@android:color/black"
                app:poly_vertices="0"/>

            <TextView
                android:id="@+id/cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/avr"
                android:layout_marginLeft="8dp"
                android:text="瑞士司导推荐"
                android:textSize="12sp"
                android:textColor="#4a4a4a"/>

            <TextView
                android:id="@+id/guidesNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:text="37位中文司导可服务"
                android:textSize="12sp"
                android:textColor="#61b09e"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/des2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7dp"
            android:text="这里有非常古老的修道院和修道院图书馆,老城区非常漂亮.要参观馆需要拐到照片中这大教堂的后面, 买门票时建议音频…"
            android:textColor="#4a4a4a"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/tiyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="已体验2000"
                android:textSize="12sp"
                android:textColor="#e98100"/>

            <TextView
                android:id="@+id/perPrice"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:gravity="center"
                android:text="$15680起/人"
                android:textSize="14sp"
                android:textColor="#4a4a4a"
                android:background="@drawable/filter_guide_yuding"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
