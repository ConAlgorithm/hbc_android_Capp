<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbg_white">
    <include layout="@layout/include_header" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/allbg_white">

        <RelativeLayout
            android:id="@+id/old_psw_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/allbg_white"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/old_psw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="@string/login_old_pwd"
                android:text=""
                android:textColor="#161616"
                android:textColorHint="#cccccc"
                android:textSize="14sp"
                android:maxLength="16"/>
            <ImageView
                android:id="@+id/iv_pwd_visible1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/login_invisible"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/old_psw_layout"
            android:background="#e5e5e5" />
        <RelativeLayout
            android:id="@+id/pwd_new_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/allbg_white"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/view"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/pwd_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="@string/login_new_pwd_hint"
                android:textColorHint="#cccccc"
                android:text=""
                android:textColor="#161616"
                android:textSize="14sp"
                android:maxLength="16"/>
            <ImageView
                android:id="@+id/iv_pwd_visible2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/login_invisible"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/pwd_new_layout"
            android:background="#e5e5e5" />
        <RelativeLayout
            android:id="@+id/change_again"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/allbg_white"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/view1"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/set_psw_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:hint="@string/login_confirm_pwd"
                android:textColorHint="#cccccc"
                android:text=""
                android:textColor="#161616"
                android:textSize="14sp"
                android:maxLength="16"/>
            <ImageView
                android:id="@+id/iv_pwd_visible3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/login_invisible"
                android:visibility="gone"/>

        </RelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/change_again"
            android:background="#e5e5e5" />
    </RelativeLayout>
    <Button
        android:id="@+id/login_submit"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login2_selector_bg"
        android:text="@string/setting_chang_pwd"
        android:enabled="false"
        android:textColor="@color/basic_white"
        android:textSize="@dimen/text_size_large"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="gone"/>

</LinearLayout>