<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/guidance_bottom_switch_layout"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/order_padding_left"
        android:layout_marginTop="10dp"
        android:elevation="1dp"
        android:background="@drawable/bg_guidance_order_bottom"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/guidance_bottom_switch_pickup_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_guidance_order_send"
            android:gravity="center"
            android:text="@string/guidance_pickup"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/guidance_bottom_switch_send_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/guidance_send"
            android:textColor="@color/default_black"
            android:textSize="14sp" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_padding_left"
        android:layout_marginRight="@dimen/order_padding_left"
        android:layout_marginTop="8dp"
        android:elevation="1dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/bg_order_info_item"
        android:padding="1dp">

        <com.hugboga.custom.widget.OrderInfoItemView
            android:id="@+id/guidance_bottom_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:hintText="@string/daily_first_city_hint"
            app:titleText="@string/daily_first_start_city" />

    </FrameLayout>
</LinearLayout>