<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/guidance_bottom_switch_layout"
        android:layout_width="116dp"
        android:layout_height="46dp"
        android:background="@drawable/bg_guidance_order_bottom"
        android:layout_marginLeft="@dimen/order_padding_left"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="3dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/guidance_bottom_switch_pickup_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_guidance_order_send"
            android:gravity="center"
            android:text="接机"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/guidance_bottom_switch_send_tv"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="送机"
            android:textColor="@color/default_black"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_above="@id/guidance_bottom_view"
        android:background="@color/default_dividing_line" />

    <com.hugboga.custom.widget.OrderInfoItemView
        android:id="@+id/guidance_bottom_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:hintText="@string/daily_first_city_hint"
        app:titleText="@string/daily_first_start_city" />
</LinearLayout>