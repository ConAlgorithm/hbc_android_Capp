<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/img_hometop"
    android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/home_main_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
    <LinearLayout
        android:id="@+id/home_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginTop="0dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_left_icon"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="@string/home_sub_title"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_right_icon"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/fg_home_menu1"
            style="@style/HomeMenuStyle"
            android:drawableTop="@mipmap/home_menu01"
            android:text="@string/title_pick" />

        <TextView
            android:id="@+id/fg_home_menu2"
            style="@style/HomeMenuStyle"
            android:drawableTop="@mipmap/home_menu02"
            android:text="@string/title_daily" />

        <TextView
            android:id="@+id/fg_home_menu3"
            style="@style/HomeMenuStyle"
            android:drawableTop="@mipmap/home_menu03"
            android:text="@string/title_rent" />
    </LinearLayout>

</LinearLayout>
