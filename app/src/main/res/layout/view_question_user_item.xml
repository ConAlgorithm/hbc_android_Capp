<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="52dp">

    <net.grobas.view.PolygonImageView
        android:id="@+id/question_user_item_avatar_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:src="@mipmap/icon_avatar_user"
        app:poly_vertices="0"/>

    <TextView
        android:id="@+id/question_user_item_title_tv"
        android:layout_toLeftOf="@id/question_user_item_avatar_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/service_user_item_bg"
        android:minHeight="52dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:lineSpacingExtra="1dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="76dp"
        android:layout_marginRight="6dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</RelativeLayout>