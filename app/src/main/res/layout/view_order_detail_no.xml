<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="#ffffff"
    android:paddingLeft="@dimen/order_padding_left"
    android:paddingRight="@dimen/order_padding_left">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_order_no_dash" />

    <TextView
        android:id="@+id/order_detail_travel_no_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="订单号"
        android:textColor="#a8a8a8"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_detail_travel_no_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/order_detail_travel_no_hint_tv"
        android:gravity="center"
        android:text="1213213213123"
        android:textColor="@color/default_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_detail_travel_no_copy_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_order_no_copy"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:text="复制"
        android:textColor="@color/default_black"
        android:textSize="12sp" />
</RelativeLayout>