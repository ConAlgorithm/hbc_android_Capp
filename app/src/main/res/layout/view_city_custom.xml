<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/city_list_margin_vertical"
        android:background="#f8f8f8" />

    <TextView
        android:id="@+id/city_custom_title_tv"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/city_list_margin_left"
        android:layout_marginRight="@dimen/city_list_margin_left"
        android:gravity="center"
        android:text="@string/city_subscribe"
        android:textColor="@color/default_black"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/city_custom_city_title_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/city_list_margin_left"
        android:layout_marginRight="@dimen/city_list_margin_left">

        <TextView
            android:id="@+id/city_custom_city_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <net.grobas.view.PolygonImageView
                android:id="@+id/city_custom_city_guide_avatar_iv1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/icon_avatar_guide"
                android:visibility="invisible"
                app:poly_border_color="#ffffff"
                app:poly_border_width="0.7dp"
                app:poly_border="true"
                app:poly_vertices="0" />
            <net.grobas.view.PolygonImageView
                android:id="@+id/city_custom_city_guide_avatar_iv2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-8dp"
                android:visibility="invisible"
                android:src="@mipmap/icon_avatar_guide"
                app:poly_border_color="#ffffff"
                app:poly_border_width="0.7dp"
                app:poly_border="true"
                app:poly_vertices="0" />
            <net.grobas.view.PolygonImageView
                android:id="@+id/city_custom_city_guide_avatar_iv3"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-8dp"
                android:visibility="invisible"
                android:src="@mipmap/icon_avatar_guide"
                app:poly_border_color="#ffffff"
                app:poly_border_width="0.7dp"
                app:poly_border="true"
                app:poly_vertices="0" />
            <net.grobas.view.PolygonImageView
                android:id="@+id/city_custom_city_guide_avatar_iv4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-8dp"
                android:visibility="invisible"
                android:src="@mipmap/icon_avatar_guide"
                app:poly_border_color="#ffffff"
                app:poly_border_width="0.7dp"
                app:poly_border="true"
                app:poly_vertices="0" />
            <net.grobas.view.PolygonImageView
                android:id="@+id/city_custom_city_guide_avatar_iv5"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-8dp"
                android:visibility="invisible"
                android:src="@mipmap/icon_avatar_guide"
                app:poly_border_color="#ffffff"
                app:poly_border_width="0.7dp"
                app:poly_border="true"
                app:poly_vertices="0" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/city_list_margin_left"
        android:layout_marginRight="@dimen/city_list_margin_left"
        android:background="@drawable/shape_order_no_dash"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/city_list_margin_left"
        android:layout_marginRight="@dimen/city_list_margin_left"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/city_custom_charter_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/city_custom_charter_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_chartered"
                android:textColor="@color/common_font_color_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/city_custom_charter_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_custom_charter_title_tv"
                android:layout_marginTop="6dp"
                android:drawableRight="@mipmap/order_choice_bottom_arrow"
                android:text="@string/city_charter_desc"
                android:textColor="@color/common_font_color_gray"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/city_custom_line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:layout_marginLeft="@dimen/city_list_margin_left"
            android:layout_marginRight="@dimen/city_list_margin_left"
            android:background="@drawable/dash_line_h"></View>

        <LinearLayout
            android:id="@+id/city_custom_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/city_custom_picksend_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/picksend"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/city_custom_picksend_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_chater_title"
                    android:layout_marginTop="6dp"
                    android:drawableRight="@mipmap/order_choice_bottom_arrow"
                    android:text="@string/city_picksend_desc"
                    android:textColor="@color/common_font_color_gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/city_custom_bottom_vertical_line"
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/dash_line_v"></View>

            <LinearLayout
                android:id="@+id/city_custom_single_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_single"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/city_custom_single_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_chater_title"
                    android:layout_marginTop="6dp"
                    android:drawableRight="@mipmap/order_choice_bottom_arrow"
                    android:text="@string/city_single_desc"
                    android:textColor="@color/common_font_color_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>