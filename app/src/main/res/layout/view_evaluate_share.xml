<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"
        />
    <RelativeLayout
        android:id="@+id/evaluate_share_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/evaluate_share_drawer_iv"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:background="@mipmap/journey_withdraw"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/evaluate_share_drawer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/evaluate_share_drawer_iv"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="#333333" />
    </RelativeLayout>

    <TextView
        android:id="@+id/evaluate_share_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/evaluate_share_drawer_iv"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/evaluate_share_rules_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_toLeftOf="@id/evaluate_share_drawer_iv"
        android:gravity="center"
        android:background="@drawable/shape_rectangle_evaluate_share"
        android:textSize="14sp"
        android:textColor="#666666" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/evaluate_share_wechat_tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/wechat_icon"
            />
        <ImageView
            android:id="@+id/evaluate_share_moments_tv"
            android:layout_marginLeft="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/moments_icon"
            />
    </LinearLayout>
</LinearLayout>