<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sku_order_padding_left"
    android:paddingRight="@dimen/sku_order_padding_left">

    <TextView
        style="@style/SkuOrderSubtitleTextView"
        android:text="出发日期" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sku_order_date_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/btn_choose_date"
            android:textColor="#000000"
            android:text="2016-12-23"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/sku_order_date_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/btn_choose_date"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="2016-12-24"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/sku_order_date_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/btn_choose_date"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:text="2016-12-25"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/sku_order_date_other_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@drawable/btn_choose_date"
            android:textColor="#000000"
            android:text="其他日期"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>