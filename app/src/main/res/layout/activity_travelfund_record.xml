<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        android:id="@+id/trave_fund_record_header"
        layout="@layout/include_header" />

    <com.hugboga.custom.widget.ZListView
        android:id="@+id/trave_fund_record_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trave_fund_record_header"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/trave_fund_record_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/trave_fund_record_listview"
        android:background="@color/default_bg"
        android:visibility="gone"
        android:paddingTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/empty_fund" />

        <TextView
            android:id="@+id/trave_fund_record_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="@string/travel_fund_record_empty_hint"
            android:textColor="#b9bdc6"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>