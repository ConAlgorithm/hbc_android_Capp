<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_white"
    android:orientation="vertical">

    <include
        android:id="@+id/trave_fund_record_header"
        layout="@layout/include_header" />

    <com.hugboga.custom.widget.ZListView
        android:id="@+id/trave_fund_record_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trave_fund_record_header"
        android:divider="@null" />

    <LinearLayout
        android:id="@+id/trave_fund_record_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trave_fund_record_listview"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="93dp"
            android:background="@drawable/error_show" />

        <TextView
            android:id="@+id/trave_fund_record_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="@string/travel_fund_record_empty_hint"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>