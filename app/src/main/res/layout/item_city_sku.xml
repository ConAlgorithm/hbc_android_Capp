<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">

    <TextView android:id="@+id/top_line" android:background="#e7e7e7" android:layout_height="8dp" android:layout_width="match_parent"/>

    <com.hugboga.custom.widget.STGVImageView
        android:layout_below="@id/top_line"
        android:id="@+id/item_city_sku_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/img_notext"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/item_sku_title"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_city_sku_img"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#da000000"
        android:layout_marginLeft="10dp"
        android:text="测试精品线路" />





    <LinearLayout
        android:id="@+id/item_sku_amount_layout"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:gravity="right"
        android:background="@drawable/list_tag2"
        android:layout_above="@+id/item_sku_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/basic_white"
            android:text="￥" />

        <TextView
            android:id="@+id/item_sku_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/basic_white"
            android:text="--" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/basic_white"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:text="@string/up" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_sku_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_sku_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="13sp"

        />


    <TextView
        android:id="@+id/item_sku_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_sku_label"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="#89000000"
        android:text="@string/sku_sale_number" />

    <TextView
        android:id="@+id/item_sku_guide_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_sku_label"
        android:layout_toLeftOf="@id/item_sku_sale"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:drawableLeft="@mipmap/journey_car_sku"
        android:drawablePadding="5dp"
        android:textColor="#7451af"
        android:text="@string/sku_item_guide_number" />

</RelativeLayout>
