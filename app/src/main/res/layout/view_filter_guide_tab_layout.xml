<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/allbg_white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_gravity="bottom"
        android:background="@color/default_dividing_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/filter_guide_type_city_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_weight="1.0">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/filter_guide_type_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/city_filter_tab_arrow_down"
                android:text="全部目的地"
                android:textColor="#898989"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/filter_guide_type_left_line_view"
            android:layout_width="@dimen/default_line_height"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/default_dividing_line" />


        <LinearLayout
            android:id="@+id/filter_guide_type_scope_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1.0">
            <TextView
                android:id="@+id/filter_guide_type_scope_count_tv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/oval_yellow"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/filter_guide_type_scope_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/city_filter_tab_arrow_down"
                android:text="筛选"
                android:textColor="#898989"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/default_line_height"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/default_dividing_line" />


        <LinearLayout
            android:id="@+id/filter_guide_type_sort_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:layout_weight="1.0">
            <ImageView
                android:id="@+id/filter_guide_type_sort_iv"
                android:layout_width="4dp"
                android:layout_height="12dp"
                android:layout_marginTop="0.2dp"
                android:visibility="gone"
                android:background="@mipmap/guide_screening_decline" />
            <TextView
                android:id="@+id/filter_guide_type_sort_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/city_filter_tab_arrow_down"
                android:text="排序"
                android:textColor="#898989"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>