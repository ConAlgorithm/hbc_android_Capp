<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_bottom_height"
    android:background="#ffffff"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"
        />
    <LinearLayout
        android:id="@+id/charter_bottom_travel_list_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/order_bottom_padding_left"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/order_choice_bottom_calendar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="行程单"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="2dp"
            android:background="@mipmap/personal_center_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/sku_order_bottom_confirm_tv"
        style="@style/OrderBottomConfirm"
        android:text="确定  " />

    <LinearLayout
        android:id="@+id/sku_order_bottom_day_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="18dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sku_order_bottom_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Day2"
            android:textColor="#ffffff"
            android:textSize="9sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:background="@mipmap/order_choice_btn_arrow" />
    </LinearLayout>
</RelativeLayout>