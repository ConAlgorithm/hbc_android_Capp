<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white">

    <RelativeLayout
        android:id="@+id/service_title"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="16dp">

        <RelativeLayout
            android:id="@+id/charter_id_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/charter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中文包车游"
                android:textSize="17sp"
                android:textColor="#ff4a4a4a"
                android:gravity="center" />
            
            <ImageView
                android:id="@+id/charter_id_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/charter_id"
                android:background="@mipmap/home_explain"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_below_charter"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_anchor_underline">

        </ImageView>
        <RelativeLayout
            android:id="@+id/single_pick_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单次接送"
                android:textSize="17sp"
                android:textColor="#ff4a4a4a"
                android:gravity="center"
                android:drawableRight="@mipmap/home_airport_transportation"
                android:drawablePadding="5dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pick_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/single_pick_send"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接送机"
                android:textSize="17sp"
                android:textColor="#ff4a4a4a"
                android:gravity="center"
                android:drawableRight="@mipmap/home_airport_transportation"
                android:drawablePadding="5dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/service_title"
        android:background="#fff3f3f3"
        android:layout_marginTop="21dp"/>

    <LinearLayout
        android:id="@+id/service_content"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_below="@+id/view1"
        android:gravity="center">

        <TextView
            android:id="@+id/daystravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="按天畅游"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ff444444"
            android:drawableTop="@mipmap/home_daystravel_icon"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/home_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="精品线路游"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ff444444"
            android:drawableTop="@mipmap/home_line_icon"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/private_ordering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="私人订制"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#ff444444"
            android:drawableTop="@mipmap/home_private_ordering_icon"
            android:drawablePadding="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/service_content"
        android:background="#fff3f3f3" />
</RelativeLayout>