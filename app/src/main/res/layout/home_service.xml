<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/service_title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.9">

            <RelativeLayout
                android:id="@+id/charter_id_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/charter_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/home_service_day"
                    android:textColor="#151515"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/charter_id_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/charter_id"
                    android:background="@mipmap/home_explain" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_below_charter"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_anchor_underline"></ImageView>
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#eaeaea" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_plane"
                android:translationY="-20dp" />


            <RelativeLayout
                android:id="@+id/pick_send"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/pick_send_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/home_service_pick_send"
                    android:textColor="#151515"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/pick_send_text"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/home_airport_transportation" />

            </RelativeLayout>
        </FrameLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#eaeaea" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginLeft="25dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_position"
                android:translationY="-20dp" />

            <RelativeLayout
                android:id="@+id/single_pick_send"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/single_pick_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/home_service_single_pick_send"
                    android:textColor="#151515"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/single_pick_text"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/home_airport_transportation" />

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/service_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#eaeaea" />

    <LinearLayout
        android:id="@+id/service_content"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_below="@+id/line"
        android:gravity="center">

        <TextView
            android:id="@+id/daystravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/home_daystravel_icon"
            android:gravity="center"
            android:text="@string/home_service_day_experience"
            android:textColor="#ff444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/home_line_icon"
            android:gravity="center"
            android:text="@string/home_service_good_line"
            android:textColor="#ff444444"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/private_ordering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/home_private_ordering_icon"
            android:gravity="center"
            android:text="@string/home_service_favorite_love"
            android:textColor="#ff444444"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/service_content"
        android:background="#fff3f3f3" />
</RelativeLayout>