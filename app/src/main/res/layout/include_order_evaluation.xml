<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:visibility="gone"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            style="@style/h_line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="感谢您的评价"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:textColor="#AAAAAA"
            android:textSize="14dp"
            android:background="@color/allbg_gray"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            android:id="@+id/assessment_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="景点讲解"
            />
        <RatingBar
            android:id="@+id/assessment_ratingbar1"
            android:progressDrawable="@drawable/rate_star_selector"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:max="5"
            android:progress="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/basic_margin_large"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="服务态度"
            />
        <RatingBar
            android:id="@+id/assessment_ratingbar2"
            android:progressDrawable="@drawable/rate_star_selector"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:max="5"
            android:progress="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/basic_margin_large"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="熟悉路线"
            />
        <RatingBar
            android:id="@+id/assessment_ratingbar3"
            android:progressDrawable="@drawable/rate_star_selector"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:max="5"
            android:progress="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/assessment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/basic_black"
        android:textSize="18sp"
        android:padding="20dp"
        android:text="aasdsadsa "
        />
</LinearLayout>
