<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_choiceness_route_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/home_view_padding_left"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="包车线路游"
        android:textColor="#111111"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/home_choiceness_route_top_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_choiceness_route_viewpager"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/home_choiceness_route_bottom_iv"
        android:layout_marginLeft="@dimen/home_view_padding_left"
        android:layout_marginRight="@dimen/home_view_padding_left"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="14dp"/>
</LinearLayout>