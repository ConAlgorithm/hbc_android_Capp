<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:LinePageIndicator = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hugboga.custom.SplashActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/splash_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.viewpagerindicator.LinePageIndicator
        android:id="@+id/indicator"
        android:padding="5dip"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        LinePageIndicator:unselectedColor="#88ffffff"
        LinePageIndicator:selectedColor="@color/basic_white"
        LinePageIndicator:lineWidth="20dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_above="@id/indicator"
        android:layout_marginBottom="20dp"
        android:text="@string/now_enter"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textColor="@color/basic_white"
        android:textSize="16sp"
        android:background="@drawable/btn_round_line"
        android:layout_height="36dp" />

</RelativeLayout>
