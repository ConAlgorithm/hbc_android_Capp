<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/toolbar_bg"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">

    <com.hugboga.custom.widget.city.TabView
        android:id="@+id/city_header_filter_tab1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:text="@string/city_filter_tab1" />

    <com.hugboga.custom.widget.city.TabView
        android:id="@+id/city_header_filter_tab2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:text="@string/city_filter_tab2" />

    <com.hugboga.custom.widget.city.TabView
        android:id="@+id/city_header_filter_tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:text="@string/city_filter_tab3" />

</LinearLayout>