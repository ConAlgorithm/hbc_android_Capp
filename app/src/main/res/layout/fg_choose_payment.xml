<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">
    <include
        android:id="@+id/choose_payment_title"
        layout="@layout/include_header" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/choose_payment_repay"
            android:textSize="15sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/choose_payment_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0"
            android:textSize="18sp"
            android:textColor="#f63308"
            />
        <TextView
            android:id="@+id/choose_payment_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/choose_payment_price_tv"
            android:text="@string/sign_rmb"
            android:textSize="12sp"
            android:textColor="#f63308"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="10dp"
        android:gravity="bottom"
        android:text="@string/choose_payment"
        android:textSize="15sp"
        android:textColor="#333333"
        />
    <RelativeLayout
        android:id="@+id/choose_payment_alipay_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/choose_payment_alipay_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/payment_alipay"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/choose_payment_alipay_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="@string/choose_payment_alipay"
            android:textSize="15sp"
            android:textColor="#333333"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/personalcenter_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#44999999"/>
    <RelativeLayout
        android:id="@+id/choose_payment_wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/choose_payment_wechat_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/payment_wechat"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toRightOf="@id/choose_payment_wechat_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="@string/choose_payment_wechat"
            android:textSize="15sp"
            android:textColor="#333333"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/personalcenter_right" />
    </RelativeLayout>
</LinearLayout>