<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp">

    <TextView
        android:id="@+id/order_price_info_item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/default_black"
        android:textSize="15sp" />

    <com.hugboga.custom.widget.TagGroup
        android:id="@+id/order_price_info_item_taggroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:horizontalSpacing="0dp"
        app:isCenter="false"
        app:verticalSpacing="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_marginTop="12dp"
        android:background="@color/default_dividing_line" />
</LinearLayout>