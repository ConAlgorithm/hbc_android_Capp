<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_invite_friends_explain_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/invitation_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/invitation_yh"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_friends_promotion_code"
            android:textColor="@color/invite_friends_basic"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/header_invite_friends_promotion_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:textColor="@color/invite_friends_basic"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/header_invite_friends_share_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_invite_share"
        android:gravity="center"
        android:text="@string/invite_friends_share"
        android:textColor="@color/basic_white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/header_invite_friends_copy_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_invite_copy"
        android:gravity="center"
        android:text="@string/invite_friends_copy_promotion_code"
        android:textColor="@color/invite_friends_basic"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/header_invite_friends_succeed_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#44999999" />
</LinearLayout>