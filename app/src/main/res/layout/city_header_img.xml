<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/city_header_img_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/city_header_img"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="?attr/actionBarSize"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/city_banner_default" />

    <com.hugboga.custom.widget.city.CityHeaderCountView
        android:id="@+id/cityHeaderCountView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <com.hugboga.custom.widget.city.CityBannerView
        android:id="@+id/city_header_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/fzdysjw"
        android:text="推荐的包车玩法"
        android:textColor="#151515"
        android:textSize="24sp" />
</LinearLayout>