<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:FlowLayout="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!--<include layout="@layout/activity_search_edit_head" />-->
    <RelativeLayout
        android:id="@+id/activity_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:paddingLeft="8dip">

        <ImageView
            android:id="@+id/header_left_btn"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/default_margin_mlarges"
            android:src="@mipmap/top_back_black" />

        <TextView
            android:id="@+id/head_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:layout_toLeftOf="@id/head_btn_right"
            android:text="搜索"
            android:textColor="@color/basic_black"
            android:textSize="16dip" />

        <EditText
            android:id="@+id/head_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/head_text_right"
            android:layout_toRightOf="@id/header_left_btn"
            android:background="@drawable/shape_cricle_black"
            android:hint="想去哪里?"
            android:imeOptions="actionSearch"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/basic_black"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/header_left_btn"
            android:background="@mipmap/home_search_icon" />

        <ImageView
            android:id="@+id/head_search_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/head_search"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/top_search_close" />
    </RelativeLayout>
    <!--<include layout="@layout/include_choose_city_head" />-->

    <LinearLayout
        android:id="@+id/empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/basic_white">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/empty_city"
            android:layout_marginTop="50dip" />

        <TextView
            android:id="@+id/empty_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#a8a8a8"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/out_of_range_city_text"
            android:layout_marginTop="10dip" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/history_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/basic_white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/search_history"
                    android:drawablePadding="10dp"
                    android:text="历史:"
                    android:textColor="#666666" />

                <com.hugboga.custom.widget.FlowLayout
                    android:id="@+id/history_city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    FlowLayout:fhorizontalSpacing="20dp"></com.hugboga.custom.widget.FlowLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e8eaea"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/basic_white"
                android:gravity="center_vertical">

                <ListView
                    android:id="@+id/left_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:dividerHeight="0dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="#e8e9ea" />

                    <ListView
                        android:id="@+id/middle_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null" />
                </RelativeLayout>

                <ListView
                    android:id="@+id/right_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <ExpandableListView
            android:id="@+id/search_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:background="@color/basic_white" />
    </RelativeLayout>


</LinearLayout>