<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sku_info_bg"
    >
    <include
        android:id="@+id/sku_header"
        layout="@layout/include_header"/>
     <include
         android:id="@+id/sku_bottom"
         layout="@layout/include_bottom_bar_submit"/>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sku_header"
        android:layout_above="@id/sku_bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <include layout="@layout/sku_info_layout"/>
        <include layout="@layout/sku_input_1"/>
        <View android:layout_width="match_parent" android:layout_height="10dp" />
        <include layout="@layout/sku_input_2"/>
        <View android:layout_width="match_parent" android:layout_height="10dp" />
        <include layout="@layout/sku_input_3"/>
        <include layout="@layout/sku_info_service"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
