<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="@dimen/unicorn_view_left_size"
    android:paddingRight="@dimen/unicorn_view_left_size">

    <TextView
        android:id="@+id/unicorn_detail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="11dp"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#111111"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unicorn_detail_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_rmb"
            android:textColor="#ff6633"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/unicorn_detail_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff6633"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/unicorn_detail_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="起/人"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>