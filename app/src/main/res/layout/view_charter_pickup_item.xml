<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charter_pickup_item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/charter_pickup_item_selected_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/order_choice_sel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/charter_item_padding_left"
        android:paddingRight="@dimen/charter_item_padding_left">

        <TextView
            android:id="@+id/charter_pickup_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="东京市内一日游"
            android:textColor="@color/default_black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/charter_pickup_item_add_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/charter_pickup_item_add_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_charter_pickup_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@mipmap/order_choice_icon_time" />

                <TextView
                    android:id="@+id/charter_pickup_item_add_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="添加送达地点"
                    android:textColor="#808080"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/charter_pickup_item_add_address_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_charter_pickup_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@mipmap/order_choice_icon_place" />

                <TextView
                    android:id="@+id/charter_pickup_item_add_address_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="添加出发地点"
                    android:textColor="#808080"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/charter_pickup_item_time_layout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="-10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/charter_pickup_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:text="测试爱迪测试爱测试667爱测试试试"
                android:textColor="@color/default_black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/charter_pickup_item_time_tv"
                android:layout_marginBottom="3.3dp"
                android:background="@mipmap/trip_icon_edit" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/charter_pickup_item_add_address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_charter_pickup_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="7dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/order_choice_icon_place" />

            <TextView
                android:id="@+id/charter_pickup_item_add_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="添加出发地点"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/charter_pickup_item_address_layout"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="-2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/charter_pickup_item_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:text="时间按时打多爱我啊大叔"
                android:textColor="@color/default_black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/charter_pickup_item_address_tv"
                android:layout_marginBottom="3.3dp"
                android:background="@mipmap/trip_icon_edit" />
        </RelativeLayout>

        <TextView
            android:id="@+id/charter_pickup_item_address_des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:text="2-1-3 YouyuJi, Shibuyi-ku,新宿，东京，日本，151-0053"
            android:textColor="#7f7f7f"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/charter_pickup_item_distance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:text="距离：13.6公里  时长：35分钟"
            android:textColor="@color/default_black"
            android:textSize="13sp"
            android:visibility="gone" />

        <View
            android:id="@+id/charter_pickup_item_bottom_space_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/charter_item_padding_bottom" />
    </LinearLayout>
</RelativeLayout>