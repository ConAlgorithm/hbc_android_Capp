<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/home_hot_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/common_font_color_black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home_hot_city_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_hot_search_title"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/home_hot_search_title"
            android:src="@mipmap/home_icon_column" />

        <TextView
            android:id="@+id/home_hot_search_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_hot_search_title"
            android:layout_toRightOf="@id/home_hot_search_title"
            android:gravity="right"
            android:includeFontPadding="false"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="13dp"
            android:text="更多"
            android:textColor="@color/default_yellow"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="4.5dp"
            android:layout_height="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/home_hot_search_more"
            android:background="@mipmap/icon_yellow_arrow_right"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/home_hot_explore_title_bg"
        android:paddingBottom="15dp"
        android:paddingLeft="3dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <net.grobas.view.PolygonImageView
            android:id="@+id/home_hot_search_guide_avtar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/home_guide_head"
            app:poly_border_color="@android:color/white"
            app:poly_border_width="2dp"
            app:poly_vertices="0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/home_hot_search_guide_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_font_color_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_hot_search_guide_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/home_hot_search_guide_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/home_hot_search_guide_name"
                android:textColor="#7F7F7F"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/home_hot_search_city_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_hot_search_guide_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/common_font_color_black"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_hot_search_city_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F8F8F8"></View>
</LinearLayout>