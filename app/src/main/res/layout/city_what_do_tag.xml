<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/city_what_do_tag_name"
        app:layout_constraintEnd_toEndOf="@+id/city_what_do_tag_name"
        app:layout_constraintStart_toStartOf="@+id/city_what_do_tag_name"
        app:layout_constraintTop_toTopOf="@+id/city_what_do_tag_name"
        app:srcCompat="@drawable/ic_line_rect" />

    <TextView
        android:id="@+id/city_what_do_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="按天包车畅游"
        android:textColor="#727272"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>