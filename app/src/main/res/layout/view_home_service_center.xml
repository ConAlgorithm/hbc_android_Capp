<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="42dp"
    android:layout_marginBottom="14dp"
    android:paddingLeft="@dimen/home_margin_left"
    android:paddingRight="@dimen/home_margin_left"
    android:background="@color/allbg_white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/view1_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/home_all_inclusive_icon"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/home_h5_1"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view2_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/home_security_icon"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/home_h5_2"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view3_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/home_compensation_icon"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/home_h5_3"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view4_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/home_insurance_icon"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:text="@string/home_h5_4"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>