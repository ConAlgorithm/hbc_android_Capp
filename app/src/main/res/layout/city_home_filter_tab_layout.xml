<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/allbg_white"
    android:visibility="visible"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#979797" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/cityHome_unlimited_type_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/city_filter_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/city_filter_tab_arraw_down"
                android:padding="@dimen/default_margin_xlarge"
                android:text="不限类型"
                android:textColor="#111111"
                android:textSize="@dimen/text_size_mediumx" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@mipmap/city_filter_selected_icon"
                android:background="@color/basic_white"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@color/default_dividing_line" />


        <FrameLayout
            android:id="@+id/cityHome_unlimited_days_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/city_filter_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/city_filter_tab_arraw_down"
                android:padding="@dimen/default_margin_xlarge"
                android:text="不限天数"
                android:textColor="#111111"
                android:textSize="@dimen/text_size_mediumx" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@mipmap/city_filter_selected_icon"
                android:background="@color/basic_white"
                android:visibility="gone" />
        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@color/default_dividing_line" />


        <FrameLayout
            android:id="@+id/cityHome_unlimited_theme_lay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/city_filter_theme_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/city_filter_tab_arraw_down"
                android:padding="@dimen/default_margin_xlarge"
                android:text="不限主题"
                android:textColor="#111111"
                android:textSize="@dimen/text_size_mediumx" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:src="@mipmap/city_filter_selected_icon"
                android:background="@color/basic_white"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>