<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/view_pay_result_state_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_pay_result_state_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/payment_success" />

            <TextView
                android:id="@+id/view_pay_result_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/view_pay_result_prompt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/par_result_succeed_prompt"
            android:textColor="#333333"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/view_pay_result_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_pay_result_state_layout"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/view_pay_result_succeed_prompt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@mipmap/pay_result_succeed_hint" />
            <TextView
                android:id="@+id/view_pay_result_succeed_prompt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lineSpacingExtra="2dp"
                android:text="@string/par_result_succeed_prompt"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_pay_result_left_tv"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/selector_pay_result"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/view_pay_result_right_tv"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_pay_result"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_pay_result_service_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@mipmap/pay_result_service" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/par_result_contact_service"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_pay_result_domestic_service_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="23dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/domestic_call"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/domestic_phone"
                android:textColor="#007aff"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_pay_result_overseas_service_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="23dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/overseas_call"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/overseas_phone"
                android:textColor="#007aff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/view_pay_result_ad_iv"
        android:layout_below="@id/view_pay_result_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/pay_result_ad"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/view_pay_result_line_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textSize="15sp" />
</merge>