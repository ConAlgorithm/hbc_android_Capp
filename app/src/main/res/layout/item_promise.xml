<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">
<ImageView
    android:id="@+id/item_promise_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/pro_safe"/>
    <TextView
        android:id="@+id/item_promise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_promise_icon"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="sadada"
        />
    <TextView
        android:id="@+id/item_promise_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_promise_icon"
        android:layout_below="@id/item_promise_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="sadad"
        />
</RelativeLayout>
