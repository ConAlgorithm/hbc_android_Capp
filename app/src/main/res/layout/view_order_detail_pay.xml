<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_bottom_height"
    android:background="#ffffff">

    <TextView
        android:id="@+id/order_detail_pay_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/sku_order_padding_left"
        android:text="¥0"
        android:textColor="@color/default_price_red"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_detail_price_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/order_detail_pay_price_tv"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="明细"
        android:textColor="@color/default_black"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/order_detail_pay_tv"
        style="@style/OrderBottomConfirm"
        android:text="@string/order_detail_pay" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line" />
</RelativeLayout>