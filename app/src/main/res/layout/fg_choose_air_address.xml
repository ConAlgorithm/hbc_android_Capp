<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e8eaeb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/basic_white"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/start_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:minHeight="72dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/from_city_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_fly"
                        android:textColor="@color/common_font_air"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/from_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="@string/choose_from_address"
                        android:maxLines="1"
                        android:textColor="@color/basic_black"
                        android:textColorHint="#cccccc"
                        android:textSize="16sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/pickup_choice_btn_arrow" />

                <LinearLayout
                    android:id="@+id/end_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/end_city_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/choose_arrived"
                        android:textColor="@color/common_font_air"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/end_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:hint="@string/choose_from_address"
                        android:maxLines="1"
                        android:textColor="@color/basic_black"
                        android:textColorHint="#cccccc"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#eeeeee" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:clickable="true"
                android:minHeight="40dp">

                <TextView
                    android:id="@+id/address_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:minEms="4"
                    android:text="@string/choose_fly_date"
                    android:textColor="@color/common_font_air"
                    android:textSize="13sp" />

            </RelativeLayout>


