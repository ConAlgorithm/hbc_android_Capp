<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8eaeb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/basic_white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/start_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_fly"
                android:id="@+id/from_city_tips"
                android:textColor="@color/basic_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/from_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:hint="@string/choose_from_address"
                android:textColorHint="#8a8b8d"
                android:textColor="@color/basic_black"
                android:textSize="17sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/convert" />

        <LinearLayout
            android:id="@+id/end_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_arrived"
                android:id="@+id/end_city_tips"
                android:textColor="@color/basic_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/end_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="@string/choose_from_address"
                android:textColorHint="#8a8b8d"
                android:textColor="@color/basic_black"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/basic_white"
        android:clickable="true"
        android:minHeight="60dp">

        <TextView
            android:id="@+id/address_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:minEms="4"
            android:textColor="@color/basic_black"
            android:text="@string/choose_fly_date"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/address_left"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/address_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:clickable="false"
                android:hint="@string/choose_fly_date_tips"
                android:minEms="4"
                android:textColor="@color/basic_black"
                android:textColorHint="#858687"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:clickable="false"
        android:gravity="center"
        android:hint="@string/choose_bottom_tips"
        android:minEms="4"
        android:textColor="#9d9e9f"
        android:textColorHint="#858687"
        android:textSize="15sp" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#d5dadb"
        android:enabled="false"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/choose_search"
        android:textColor="@color/basic_white"
        android:textSize="20sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#d0d1d3" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="#e8eaeb"
            android:gravity="center"
            android:text="@string/choose_search_history" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/show_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/history_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/clean_all_history"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="#e8eaeb"
                android:gravity="center"
                android:text="@string/choose_clean_all_history" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>