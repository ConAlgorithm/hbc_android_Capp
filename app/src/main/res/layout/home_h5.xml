<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:layout_marginTop="8dp"
    android:background="@color/allbg_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_all_inclusive_icon"
        android:gravity="center"
        android:text="一价全包"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:layout_marginTop="25dp"
        android:background="#bcbcbc" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_security_icon"
        android:gravity="center"
        android:text="服务保障"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:layout_marginTop="25dp"
        android:background="#bcbcbc" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_compensation_icon"
        android:gravity="center"
        android:text="先行赔付"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="17dp"
        android:layout_marginTop="25dp"
        android:background="#bcbcbc" />

    <TextView
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableTop="@mipmap/home_insurance_icon"
        android:gravity="center"
        android:text="免费保险"
        android:textColor="#9b9b9b"
        android:textSize="12sp" />
</LinearLayout>