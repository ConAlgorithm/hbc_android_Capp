<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_line_height"
        android:layout_marginLeft="@dimen/home_margin_left"
        android:background="@color/default_dividing_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="@dimen/home_margin_left"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/home_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_font_color_black"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/home_album_title_arrow_iv"
            android:layout_width="6dp"
            android:layout_height="9dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/home_back" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_album_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />
</LinearLayout>