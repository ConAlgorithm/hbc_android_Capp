<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/order_padding_left"
    android:paddingRight="@dimen/order_padding_left"
    android:background="#88000000">

    <TextView
        android:id="@+id/detail_pass_city_title_tv"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/detail_pass_city_close_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/order_trip_close" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_pass_city_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/detail_pass_city_close_iv" />
</RelativeLayout>