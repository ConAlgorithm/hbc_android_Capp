<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/city_guides_layout_guide1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/icon_avatar_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/city_guides_layout_guide2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@mipmap/icon_avatar_guide"
        app:layout_constraintBottom_toBottomOf="@+id/city_guides_layout_guide1"
        app:layout_constraintEnd_toEndOf="@+id/city_guides_layout_guide1"
        app:layout_constraintTop_toTopOf="@+id/city_guides_layout_guide1" />
</android.support.constraint.ConstraintLayout>