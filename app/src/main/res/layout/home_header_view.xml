<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_header_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/place_ammount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/guide_ammount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/place_ammount_text"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/home_video_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/guide_ammount_text"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/home_icon_play" />
            </RelativeLayout>

            <!-- header 选择框 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/home_chater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/home_chater_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="定制包车游"
                            android:textColor="@color/common_font_color_black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/home_chater_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_chater_title"
                            android:layout_marginTop="8dp"
                            android:text="自己安排游玩行程,中文司机兼导游全程服务"
                            android:textColor="@color/common_font_color_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/home_chater_desc"
                            android:drawableRight="@mipmap/order_choice_bottom_arrow"
                            android:text="预订后可挑选司导"
                            android:textColor="@color/common_font_color_gray"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/dash_line_h"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/home_picksend_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="接送机"
                                android:textColor="@color/common_font_color_black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/home_chater_title"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="8dp"
                                android:drawableRight="@mipmap/order_choice_bottom_arrow"
                                android:text="中文包车接送机"
                                android:textColor="@color/common_font_color_gray"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/dash_line_v"></View>

                        <LinearLayout
                            android:id="@+id/home_single_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="单次接送"
                                android:textColor="@color/common_font_color_black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/home_chater_title"
                                android:layout_marginTop="8dp"
                                android:drawableRight="@mipmap/order_choice_bottom_arrow"
                                android:text="点到点中文包车"
                                android:textColor="@color/common_font_color_gray"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/home_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="找司导助手规划行程"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </FrameLayout>

    <com.hugboga.custom.widget.home.HomeSearchTabView
        android:id="@+id/home_header_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.hugboga.custom.widget.home.HomeSearchTabView>
</LinearLayout>
