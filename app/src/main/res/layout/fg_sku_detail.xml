<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/servicer_center_content_bg"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:id="@+id/sku_detail_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginTop="60dp"
            android:background="@mipmap/city_filter_empty_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="该线路不存在"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/sku_detail_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:padding="10dp"
            android:text="去首页转转"
            android:textColor="#007ffa"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sku_detail_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/goto_order_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_bottom_height"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:paddingLeft="@dimen/order_bottom_padding_left">

            <LinearLayout
                android:id="@+id/sku_detail_bottom_service_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/icon_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000000"
                    android:text="联系客服"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/sku_detail_bottom_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/sku_detail_bottom_service_layout"
                android:background="@color/default_dividing_line" />

            <LinearLayout
                android:id="@+id/sku_detail_bottom_online_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/sku_detail_bottom_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/icon_im" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000000"
                    android:text="在线咨询"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/goto_order"
                style="@style/OrderBottomConfirm"
                android:text="现在预订" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/default_dividing_line" />
        </RelativeLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/goto_order_lay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/icon_msg_popbg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="13dp"
            android:text="预订成功后，您可以挑选心仪司导服务啦！"
            android:textColor="#926c11"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
