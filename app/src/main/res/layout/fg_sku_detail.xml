<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/servicer_center_content_bg">

        <LinearLayout
            android:id="@+id/goto_order_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goto_little_helper"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="咨询小助手"
                android:background="@drawable/bg_little_helpe"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/goto_order"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/selector_sku_detail_on_order"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:text="现在预订"
                android:textColor="#000000" />
        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/goto_order_lay" />

    </RelativeLayout>
</LinearLayout>
