<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/servicer_center_content_bg">

        <LinearLayout
            android:id="@+id/goto_order_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:background="@color/allbg_white"
            android:layout_alignParentBottom="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goto_little_helper"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="咨询小助手"
                android:background="@drawable/bg_little_helpe"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="18dp"
                android:layout_weight="1"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/goto_order"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:background="@drawable/selector_sku_detail_on_order"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="18dp"
                android:text="现在预订"
                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/goto_order_lay"
            android:background="@color/coupon_layout1_color"/>
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/view_line" />

    </RelativeLayout>
</LinearLayout>
