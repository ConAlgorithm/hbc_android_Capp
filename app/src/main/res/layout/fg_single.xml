<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <include layout="@layout/include_progress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/allbg_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/allbg_gray"
            android:paddingTop="30dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip">

            <LinearLayout
                android:id="@+id/send_flight_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip"
                android:background="@drawable/shape_rounded_rectangle_white">

                <TextView
                    android:id="@+id/send_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="您在哪个城市用车?"
                    android:textColorHint="@color/change_mobile_hint"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/send_where_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/shape_rounded_rectangle_white">

                <TextView
                    android:id="@+id/send_where_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="您从哪里出发?"
                    android:textColorHint="@color/change_mobile_hint"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/send_where_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/send_where_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/change_mobile_hint"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/send_to_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/shape_rounded_rectangle_white">

                <TextView
                    android:id="@+id/send_to_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="您要去哪里?"
                    android:textColorHint="@color/change_mobile_hint"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/send_to_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/send_to_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textColor="@color/change_mobile_hint"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/send_time_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/shape_rounded_rectangle_white">

                <TextView
                    android:id="@+id/send_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选择出发时间"
                    android:textColorHint="@color/change_mobile_hint"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/send_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@drawable/btn_orange"
                android:textColor="@color/basic_white"
                android:text="@string/btn_select_car"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/submit_order_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/journey_annotation"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/submit_order_tip" />

            <include layout="@layout/include_bottom_promise" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>