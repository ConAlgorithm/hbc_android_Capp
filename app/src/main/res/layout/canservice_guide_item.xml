<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/head"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icon_avatar_guide"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/name"
        android:textColor="@color/basic_black"
        android:textSize="15sp"
        android:layout_alignTop="@id/head"
        android:layout_toRightOf="@id/head"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:drawableRight="@mipmap/man_icon"
        android:maxWidth="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/auth"
        android:src="@mipmap/auth_icon"
        android:layout_alignTop="@id/name"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/choose"
        android:textColor="@color/basic_white"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:text="@string/choose_guide"
        android:background="@drawable/shape_rounded_yellow_btn"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="34dp" />
    <TextView
        android:id="@+id/city"
        android:textColor="@color/basic_black"
        android:textSize="14sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/choose"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.hugboga.custom.widget.SimpleRatingBar
        android:id="@+id/ratingview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head"
        android:layout_below="@id/city"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        app:srb_starSize="14dp"
        app:srb_starsSeparation="1dp"
        app:srb_numberOfStars="5"
        app:srb_stepSize="0.01"
        app:srb_borderColor="#00000000"
        app:srb_fillColor="@color/default_yellow"
        app:srb_starBackgroundColor="#eeeeee"
        app:srb_isIndicator="true"
        />

    <TextView
        android:id="@+id/score"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/city"
        android:layout_toRightOf="@id/ratingview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>