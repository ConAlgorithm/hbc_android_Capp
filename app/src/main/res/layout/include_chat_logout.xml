<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar"
    android:visibility="gone"
    android:background="#f0f0f0">

    <TextView
        android:id="@+id/im_login_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/basic_margin_small"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="1dp"
        android:text="下单后可以在这里\n联系司导"
        android:textColor="#898989"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_rounded_yellow_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_above="@id/login_btn"
        android:layout_below="@id/im_login_hint_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:src="@mipmap/chat_notlogin" />

</RelativeLayout>
