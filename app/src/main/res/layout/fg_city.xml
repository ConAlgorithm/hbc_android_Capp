<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F8"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <!--<include layout="@layout/activity_search_edit_head" />-->
    <RelativeLayout
        android:id="@+id/activity_head_layout"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:paddingLeft="8dip">

        <ImageView
            android:id="@+id/header_left_btn"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/default_margin_mlarges"
            android:src="@mipmap/top_back_black" />

        <TextView
            android:id="@+id/head_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dip"
            android:layout_toLeftOf="@id/head_btn_right"
            android:text="搜索"
            android:textColor="@color/basic_black"
            android:textSize="16dip" />

        <EditText
            android:id="@+id/head_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/head_text_right"
            android:layout_toRightOf="@id/header_left_btn"
            android:background="@drawable/shape_cricle_black"
            android:hint="想去哪里?"
            android:imeOptions="actionSearch"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/basic_black"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/header_left_btn"
            android:background="@mipmap/home_search_icon" />

        <ImageView
            android:id="@+id/head_search_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/head_search"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/top_search_close" />
    </RelativeLayout>
    <include layout="@layout/include_choose_city_head" />

    <LinearLayout
        android:id="@+id/arrival_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:background="@drawable/empty_flight"
            android:layout_marginTop="50dip"  />

        <TextView
            android:id="@+id/empty_layout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#a8a8a8"
            android:layout_marginTop="10dip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="很抱歉，没有找到您搜索的机场\n或者该城市暂未开通送机服务\n可联系客服，帮您查找" />
        <TextView
            android:id="@+id/arrival_empty_service_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_empty_btn_shape"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="联系客服"
            android:textSize="13sp"
            android:textColor="#828282"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <ListView
            android:id="@+id/country_lvcountry"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/shape_rounded_yellow_btn"
            android:enabled="false"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="24sp"
            android:visibility="invisible" />

        <com.hugboga.custom.widget.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:visibility="gone" />
    </FrameLayout>

    <Button
        android:id="@+id/city_choose_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="25dip"
        android:background="@drawable/btn_orange"
        android:text="@string/dialog_btn_sure"
        android:textColor="@color/basic_white"
        android:textSize="18sp"
        android:visibility="gone" />
</LinearLayout>