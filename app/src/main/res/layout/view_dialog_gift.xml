<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_gift_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dialog_gift_display_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/pop_top_title_illustration" />

        <ImageView
            android:id="@+id/dialog_gift_close_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/pop_top_btn_closed" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:paddingBottom="30dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/dialog_gift_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送你300元大礼包"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#262a33"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dialog_gift_first_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="恭喜您成为皇包车用户，初始密码短信已下发，请注意查收。"
            android:visibility="gone"
            android:textColor="#111111"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dialog_gift_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#111111"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/dialog_gift_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="@drawable/bg_gift_phone_code"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dialog_gift_phone_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="+86"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/icon_black_arrow"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/dialog_gift_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:hint="请输入手机号"
                    android:background="@drawable/bg_gift_phone"
                    />
                <TextView
                    android:id="@+id/dialog_gift_error_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:text="请填写正确的手机号"
                    android:textColor="#ff3600"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_gift_confirm_tv"
            android:layout_width="130dp"
            android:layout_height="34dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_rounded_gray_btn"
            android:gravity="center"
            android:text="领取"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/pop_bottombg_ribbons" />
</LinearLayout>