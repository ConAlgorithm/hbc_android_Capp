<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/ogi_info_layout"
        android:layout_width="match_parent"
        android:layout_height="86dip"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:orientation="horizontal">

        <net.grobas.view.PolygonImageView
            android:id="@+id/ogi_avatar_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/icon_avatar_guide"
            app:poly_vertices="0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ogi_avatar_iv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ogi_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <com.hugboga.custom.widget.SimpleRatingBar
                    android:id="@+id/ogi_ratingview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srb_starSize="14dp"
                    app:srb_starsSeparation="1dp"
                    app:srb_numberOfStars="5"
                    app:srb_stepSize="0.01"
                    app:srb_borderColor="#00000000"
                    app:srb_fillColor="@color/default_yellow"
                    app:srb_starBackgroundColor="#eeeeee"
                    app:srb_isIndicator="true"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/ogi_describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="1dip"
                android:textColor="@color/basic_gray_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ogi_plate_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:textColor="@color/basic_gray_light"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/ogi_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="#e8e8e6" />

    <LinearLayout
        android:id="@+id/ogi_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ogi_call_tv"
            android:layout_width="70dip"
            android:layout_height="28dip"
            android:background="@drawable/shape_rounded_gray_light"
            android:gravity="center"
            android:text="@string/call"
            android:textColor="@color/basic_gray_light"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/ogi_chat_tv"
            android:layout_width="70dip"
            android:layout_height="28dip"
            android:background="@drawable/shape_rounded_gray_light"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/private_chat"
            android:textColor="@color/basic_gray_light"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/ogi_collect_tv"
            android:layout_width="70dip"
            android:layout_height="28dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_rounded_gray_light"
            android:gravity="center"
            android:text="@string/collect"
            android:textColor="@color/basic_gray_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ogi_evaluate_tv"
            android:layout_width="70dip"
            android:layout_height="28dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_rounded_gray_light"
            android:gravity="center"
            android:text="@string/order_detail_evaluate"
            android:textColor="@color/basic_gray_light"
            android:textSize="13sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/ogi_prompt_tv"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center"
        android:background="#fdd631"
        android:text="@string/order_detail_prompt_evaluation_1"
        android:textSize="13sp"
        android:textColor="#333333"
        />
</LinearLayout>