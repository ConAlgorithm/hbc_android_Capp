<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dip"
        android:orientation="horizontal">

        <net.grobas.view.PolygonImageView
            android:id="@+id/ogi_avatar_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginTop="13dp"
            android:background="@mipmap/collection_icon_pic"
            app:poly_border="false"
            app:poly_border_color="@android:color/white"
            app:poly_border_width="5dp"
            app:poly_corner_radius="5"
            app:poly_rotation_angle="25"
            app:poly_shadow="false"
            app:poly_shadow_color="@android:color/black"
            app:poly_vertices="0" />

        <TextView
            android:id="@+id/ogi_im_iv"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_order_im"/>
        <TextView
            android:id="@+id/ogi_phone_iv"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_toLeftOf="@id/ogi_im_iv"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_order_phone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/ogi_phone_iv"
            android:layout_toRightOf="@id/ogi_avatar_iv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ogi_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <com.hugboga.custom.widget.RatingView
                    android:id="@+id/ogi_ratingView"
                    android:layout_width="wrap_content"
                    android:layout_height="15dip"
                    android:layout_marginTop="1dip"
                    android:layout_marginLeft="16dp"
                    app:gap="4dip"
                    app:rating_bg="@drawable/btn_yellow_ratingbar"
                    app:touchable="false" />
            </LinearLayout>


            <TextView
                android:id="@+id/ogi_describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:textColor="@color/basic_gray_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ogi_plate_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:textColor="@color/basic_gray_light"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/ogi_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e8e8e6" />

    <LinearLayout
        android:id="@+id/ogi_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="46dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ogi_collect_tv"
            android:layout_width="80dip"
            android:layout_height="28dip"
            android:background="@drawable/shape_rounded_gray_light"
            android:gravity="center"
            android:text="@string/collect"
            android:textColor="@color/basic_gray_light"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/ogi_evaluate_tv"
            android:layout_width="80dip"
            android:layout_height="28dip"
            android:layout_marginLeft="32dip"
            android:background="@drawable/shape_rounded_gray_light"
            android:gravity="center"
            android:text="@string/evaluate"
            android:textColor="@color/basic_gray_light"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>