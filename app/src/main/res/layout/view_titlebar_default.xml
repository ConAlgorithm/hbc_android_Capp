<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/titlebar_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/titlebar_left_tv"
            android:layout_width="@dimen/titlebar_icon_height"
            android:layout_height="@dimen/titlebar_icon_height"
            android:background="@mipmap/topbar_back"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="@dimen/titlebar_right_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/titlebar_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/titlebar_right_tv"
            android:layout_width="@dimen/titlebar_icon_height"
            android:layout_height="@dimen/titlebar_icon_height"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/titlebar_text"
            android:textSize="@dimen/titlebar_right_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/titlebar_middle_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:layout_toLeftOf="@id/titlebar_right_layout"
        android:layout_toRightOf="@id/titlebar_left_layout"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/titlebar_text"
        android:textSize="@dimen/titlebar_title_size" />

</merge>