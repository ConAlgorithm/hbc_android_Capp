<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="#ffffff"
    android:clipToPadding="false"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/insuer_info_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="100dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:text="投保信息"
        android:textColor="@color/default_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/insuer_info_passport_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insuer_info_name_tv"
        android:layout_marginTop="5dp"
        android:text="投保信息"
        android:textColor="@color/default_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/insuer_info_policy_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insuer_info_passport_tv"
        android:layout_marginTop="5dp"
        android:text="投保信息"
        android:textColor="@color/default_black"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/insuer_info_state_tv"
        android:layout_alignTop="@id/insuer_info_name_tv"
        android:paddingTop="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="投保信息"
        android:textSize="12sp"
        android:textColor="#ababab"
        />

    <FrameLayout
        android:id="@+id/insuer_info_reset_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_below="@id/insuer_info_passport_tv">
        <TextView
            android:id="@+id/insuer_info_reset_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击重试"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="12sp"
            android:textColor="#858585"
            android:background="@drawable/selector_empty_btn_shape"
            />
        <com.hugboga.custom.widget.CircularProgress
            android:id="@+id/insuer_info_reset_progress"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:borderWidth = "1.5dp"
            />
    </FrameLayout>
    <View
        android:layout_below="@id/insuer_info_policy_num_tv"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-15dp"
        android:background="@color/default_dividing_line" />

</RelativeLayout>