<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/home_hot_search_city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_hot_search_city_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_more" />

            <View
                android:id="@+id/home_hot_search_city_fillter_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/picture_filter_shape"></View>

            <RelativeLayout
                android:id="@+id/home_hot_search_city_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_gravity="bottom|right">

                <TextView
                    android:id="@+id/home_hot_search_city_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/home_gnumber_bg"
                    android:textColor="@android:color/white" />

                <net.grobas.view.PolygonImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="-13dp"
                    android:layout_toRightOf="@id/home_hot_search_city_bottom_text"
                    android:src="@mipmap/home_guide_head"
                    app:poly_vertices="0"
                    app:poly_border="true"
                    app:poly_border_color="@android:color/white"
                    app:poly_border_width="2dp" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/home_hot_search_city_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:textColor="@color/common_font_color_black"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/home_hot_search_city_item_bottom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_hot_search_city_item_per_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F63308"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_hot_search_city_item_custom_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/common_font_color_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>