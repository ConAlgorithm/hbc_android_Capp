<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_large">

    <TextView
        android:id="@+id/im_chat_orders_item_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_medium"
        android:textColor="@color/letter_im_order_color"
        android:textSize="@dimen/text_size_mediumx" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_xlarge"
        android:layout_toRightOf="@id/im_chat_orders_item_state"
        android:orientation="vertical">

        <TextView
            android:id="@+id/im_chat_orders_item_ordertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/letter_im_order_color"
            android:textSize="@dimen/text_size_mediumx" />

        <TextView
            android:id="@+id/im_chat_orders_item_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/letter_im_order_color"
            android:textSize="@dimen/text_size_mediumx" />

        <TextView
            android:id="@+id/im_chat_orders_item_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/letter_im_order_color"
            android:textSize="@dimen/text_size_mediumx" />

    </LinearLayout>

</RelativeLayout>