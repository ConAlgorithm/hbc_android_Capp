<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_large">

   <LinearLayout
       android:id="@+id/im_chat_orders_item_type"
       android:layout_marginLeft="@dimen/default_margin_medium"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/im_chat_orders_item_ordertime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:ellipsize="end"
           android:text="送机"
           android:maxLines="1"
           android:textColor="@color/text_clolor_2b2b2b"
           android:textSize="@dimen/text_size_mediumx" />

       <TextView
           android:id="@+id/im_chat_orders_item_state"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="未开始"
           android:layout_marginLeft="@dimen/default_margin_medium"
           android:textColor="#adadad"
           android:textSize="@dimen/text_size_mediumx" />
   </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin_medium"
        android:layout_below="@id/im_chat_orders_item_type"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/im_chat_orders_item_address0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="时间"
            android:maxLines="1"
            android:textColor="#adadad"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/im_chat_orders_item_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="出发"
            android:maxLines="1"
            android:textColor="#adadad"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/im_chat_orders_item_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="到达"
            android:maxLines="1"
            android:textColor="#adadad"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</RelativeLayout>