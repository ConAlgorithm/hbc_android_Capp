<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_detail_travel_parrent_layout">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/order_padding_left"
        android:layout_marginRight="@dimen/order_padding_left"
        android:background="@drawable/shape_order_no_dash"
        android:layerType="software" />

    <LinearLayout
        android:id="@+id/order_detail_all_travel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="6dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/order_detail_all_travel_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_detail_all_travel_more_iv"
            android:layout_width="11dp"
            android:layout_height="13dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/more_arrow_down" />

        <TextView
            android:id="@+id/order_detail_all_travel_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="展开日程"
            android:textColor="#a8a8a8"
            android:textSize="12sp" />
    </LinearLayout>
</merge>