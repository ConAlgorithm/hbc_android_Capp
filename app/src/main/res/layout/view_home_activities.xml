<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/home_activities_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/home_view_padding_left"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="精彩活动"
        android:textColor="#111111"
        android:textSize="18sp" />

    <com.hugboga.custom.widget.LoopViewPager
        android:id="@+id/home_activities_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:clipChildren="false" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/home_activities_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_activities_viewpager"
        android:layout_marginBottom="5dp"
        res:centered="true"
        res:fillColor="#ffffff"
        res:pageColor="#00ffffff"
        res:radius="2.5dip"
        res:strokeColor="#ffffff"
        res:strokeWidth="0.5dip" />
</RelativeLayout>