<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="145dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/guide_carinfo_car_iv"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginLeft="18dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/guide_detail_car_default_bg"
            />
        <ImageView
            android:id="@+id/guide_carinfo_current_iv"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:visibility="gone"
            android:background="@mipmap/guide_detail_service"
            />

        <TextView
            android:id="@+id/guide_carinfo_pic_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="18dp"
        >
        <TextView
            android:id="@+id/guide_carinfo_name_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#111111"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/guide_carinfo_seat_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/guide_carinfo_luggage_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/guide_carinfo_plate_num_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#666666"
            android:textSize="13sp"
            />
    </LinearLayout>

</LinearLayout>