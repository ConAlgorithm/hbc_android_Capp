<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sku_order_padding_left"
        android:layout_marginRight="@dimen/sku_order_padding_left">

        <TextView
            android:id="@+id/sku_order_car_type_title_tv"
            style="@style/SkuOrderSubtitleTextView"
            android:text="@string/order_car_title" />

        <ImageView
            android:id="@+id/sku_order_car_type_luggage_explain_iv"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@mipmap/order_luggage_instruction" />

        <TextView
            android:id="@+id/sku_order_car_type_luggage_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="13.7dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/sku_order_car_type_luggage_explain_iv"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:text="@string/order_car_luggage_explain"
            android:textColor="@color/default_highlight_blue"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sku_order_car_type_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sku_order_car_type_more_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_car_more"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/sku_order_car_type_more_arrow_iv"
            android:layout_width="9dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/icon_black_arrow" />
    </LinearLayout>
</LinearLayout>