<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/home_hot_search_city_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_more" />

        <View
            android:id="@+id/home_hot_search_city_fillter_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/picture_filter_shape"></View>

        <RelativeLayout
            android:id="@+id/home_hot_search_city_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom|left">

            <TextView
                android:id="@+id/home_hot_search_city_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="17dp"
                android:paddingLeft="10dp"
                android:background="@drawable/home_gnumber_bg"
                android:textColor="@android:color/white" />

            <net.grobas.view.PolygonImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/guide_head"
                app:poly_vertices="0"
                app:poly_border="true"
                app:poly_border_color="@android:color/white"
                app:poly_border_width="2dp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/save_guild_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right">

            <ImageView
                android:id="@+id/save_line"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/save_guild_icon" />

        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/home_hot_search_city_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:textColor="@color/common_font_color_black"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/home_hot_search_city_item_bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/home_hot_search_city_item_custom_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_font_color_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/home_hot_search_city_item_per_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="1dp"
            android:textColor="@color/default_price_red"
            android:textSize="15sp" />
    </RelativeLayout>
</merge>