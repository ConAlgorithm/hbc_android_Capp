<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <View
        android:id="@+id/record_middle_line_view"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#d8d8d8"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_centerInParent="true" />
    <View
        android:id="@+id/record_bottom_space_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f5f5f5"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/record_bottom_space_view"
        android:layout_toLeftOf="@id/record_middle_line_view"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_invited_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/travel_fund_record_invited"
            android:textColor="#111111"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/record_bottom_space_view"
        android:layout_toRightOf="@id/record_middle_line_view"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/record_obtain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/travel_fund_record_obtain"
            android:textColor="#111111"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>