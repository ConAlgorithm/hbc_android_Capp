<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_head_layout"
    android:layout_width="fill_parent"
    android:layout_height="48dip"
    android:background="@color/basic_other_color">

    <ImageView
        android:id="@+id/head_btn_left"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dip"
        android:src="@mipmap/top_back" />

    <TextView
        android:id="@+id/head_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxEms="8"
        android:singleLine="true"
        android:textColor="@color/allbg_white"
        android:textSize="20dip" />


    <ImageView
        android:id="@+id/head_btn_right"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:src="@mipmap/top_call"
        android:visibility="gone" />

    <TextView
        android:id="@+id/head_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/head_btn_right"
        android:textColor="@color/basic_white"
        android:textSize="16dip"
        android:text="@string/call_service"
        android:visibility="gone" />

</RelativeLayout>