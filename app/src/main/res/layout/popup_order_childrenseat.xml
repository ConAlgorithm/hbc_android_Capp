<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:gravity="bottom"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basic_white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:padding="10dp">

        <TextView
            android:id="@+id/popup_order_children_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#3185F6"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="安全座椅"
            android:textColor="#222527"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/popup_order_children_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="#3185F6"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/change_mobile_line" />

    <include
        android:id="@+id/popup_order_children_item_1"
        layout="@layout/popup_order_children_seat_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/change_mobile_line" />

    <include
        android:id="@+id/popup_order_children_item_2"
        layout="@layout/popup_order_children_seat_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/change_mobile_line" />

    <include
        android:id="@+id/popup_order_children_item_3"
        layout="@layout/popup_order_children_seat_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/change_mobile_line" />

    <include
        android:id="@+id/popup_order_children_item_4"
        layout="@layout/popup_order_children_seat_item" />
    </LinearLayout>

</LinearLayout>