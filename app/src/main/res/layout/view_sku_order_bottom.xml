<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_bottom_height"
    android:background="#ffffff"
    >
    <TextView
        android:id="@+id/sku_order_bottom_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sku_order_padding_left"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:text="¥0"
        android:textColor="#f63408"/>
    <TextView
        android:id="@+id/sku_order_bottom_discount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sku_order_bottom_price_tv"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:paddingTop="1dp"
        android:textSize="12sp"
        android:text="已优惠¥0"
        android:textColor="#7f7f7f"/>
    <TextView
        android:id="@+id/sku_order_bottom_pay_tv"
        android:text="去支付"
        style="@style/OrderBottomConfirm"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"
        />
</RelativeLayout>