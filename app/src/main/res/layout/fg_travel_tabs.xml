<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-ruto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/travel_tab_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/travel_tab_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/travel_tab1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/travel_tab1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部订单"
                    android:textColor="@drawable/travel_tab_text_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:id="@+id/travel_tab1_line"
                android:layout_width="@dimen/travel_tab_bottom_width"
                android:layout_height="@dimen/travel_tab_bottom_line_hegith"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/travel_tab_bottom_color"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/travel_tab2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/travel_tab2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待付款"
                    android:textColor="@drawable/travel_tab_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/travel_tab2_number"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:minWidth="16dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/basic_margin_small"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:background="@drawable/msg_round_bg"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/travel_tab2_line"
                android:layout_width="@dimen/travel_tab_bottom_width"
                android:layout_height="@dimen/travel_tab_bottom_line_hegith"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/travel_tab_bottom_color"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/travel_tab3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/travel_tab3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进行中"
                    android:textColor="@drawable/travel_tab_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/travel_tab3_number"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:minWidth="16dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/basic_margin_small"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:visibility="gone"
                    android:background="@drawable/msg_round_bg"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:id="@+id/travel_tab3_line"
                android:layout_width="@dimen/travel_tab_bottom_width"
                android:layout_height="@dimen/travel_tab_bottom_line_hegith"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/travel_tab_bottom_color"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/travel_tab4_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/travel_tab4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待评价"
                    android:textColor="@drawable/travel_tab_text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/travel_tab4_number"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:minWidth="16dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/basic_margin_small"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:visibility="gone"
                    android:background="@drawable/msg_round_bg"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:id="@+id/travel_tab4_line"
                android:layout_width="@dimen/travel_tab_bottom_width"
                android:layout_height="@dimen/travel_tab_bottom_line_hegith"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/travel_tab_bottom_color"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/travel_tab_lineb" />
</RelativeLayout>
