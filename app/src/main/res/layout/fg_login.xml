<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_login_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/change_mobile_margin"
        android:paddingRight="@dimen/change_mobile_margin"
        android:paddingTop="@dimen/change_mobile_top"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_mobile_textbox_height"
            android:layout_marginTop="@dimen/change_mobile_top"
            android:background="@drawable/textbox"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change_mobile_areacode"
                android:layout_width="@dimen/change_mobile_areacode_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="选择区号"
                android:paddingLeft="@dimen/basic_margin_medium"
                android:text="+86"
                android:textColor="@color/change_mobile_text"
                android:textColorHint="@color/change_mobile_hint"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/basic_margin_small"
                android:layout_marginTop="@dimen/basic_margin_small"
                android:background="@color/login_login_bg" />

            <EditText
                android:id="@+id/login_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingLeft="@dimen/basic_margin_medium"
                android:textColor="@color/change_mobile_text"
                android:textColorHint="@color/change_mobile_hint" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_mobile_textbox_height"
            android:layout_marginTop="@dimen/change_mobile_top"
            android:background="@drawable/textbox"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pwd_visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/basic_margin_large"
                android:paddingLeft="@dimen/basic_margin_large"
                android:src="@mipmap/icon_pwd_invisible"/>

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/basic_margin_large"
                android:layout_toLeftOf="@id/iv_pwd_visible"
                android:background="@null"
                android:hint="请输入密码"
                android:imeActionLabel="登录"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/basic_margin_medium"
                android:textColor="@color/change_mobile_text"
                android:textColorHint="@color/change_mobile_hint" />

        </RelativeLayout>

        <TextView
            android:id="@+id/change_mobile_diepwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/basic_margin_large"
            android:padding="@dimen/basic_margin_large"
            android:text="忘记密码?"
            android:textSize="@dimen/text_size_large" />

        <Button
            android:id="@+id/login_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_margin_xlarge"
            android:background="@drawable/login_selector_bg"
            android:text="登录"
            android:textColor="@color/basic_white"
            android:textSize="@dimen/text_size_xlarge" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/basic_margin_xlarge">

            <TextView
                android:id="@+id/tv_account_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_login_color"
                android:textSize="@dimen/text_size_large"
                android:text="没有帐号?"/>

            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/basic_margin_medium"
                android:layout_toRightOf="@id/tv_account_tips"
                android:layout_alignTop="@id/tv_account_tips"

                android:text="立即注册"

                android:textSize="@dimen/text_size_large" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>