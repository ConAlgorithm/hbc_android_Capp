<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height">

    <RelativeLayout
        android:id="@+id/denglu_title"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@mipmap/personal_background">

        <FrameLayout
            android:id="@+id/set_layout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/set"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/personal_set" />

            <ImageView
                android:id="@+id/red_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="42dp"
                android:background="@drawable/red_set_pwd"
                android:visibility="gone"/>
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/ll_login_click_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <net.grobas.view.PolygonImageView
                android:id="@+id/my_icon_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/personal_default_head"
                app:poly_border="false"
                app:poly_border_color="@android:color/white"
                app:poly_border_width="5dp"
                app:poly_corner_radius="5"
                app:poly_rotation_angle="25"
                app:poly_shadow="false"
                app:poly_shadow_color="@android:color/black"
                app:poly_vertices="0" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:paddingRight="25dp"
                android:layout_toRightOf="@+id/my_icon_head"
                android:text="点击登录"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#898989"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/personal_title_next" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/above_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/denglu_title"
        android:background="@color/default_bg" />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/above_bottom"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/slidemenu_header_coupon_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/slidemenu_header_coupon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#898989"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/slidemenu_header_coupon_unit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="张"
                    android:textColor="#898989"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/icon_coupon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/personal_icon_coupon" />
                <TextView
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/icon_coupon"
                    android:layout_marginLeft="5dp"
                    android:text="优惠券"
                    android:textColor="#7f7f7f"
                    android:textSize="14sp" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:background="@color/default_bg" />

        <RelativeLayout
            android:id="@+id/slidemenu_header_travelfund_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/travel_fund_hint_iv"
                android:layout_width="57dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:background="@mipmap/personal_invite"
                android:gravity="center"
                android:text="邀请就送"
                android:textColor="@color/basic_white"
                android:textSize="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/jijin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/slidemenu_header_travelfund_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#898989"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/slidemenu_header_travelfund_unit_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="元"
                        android:textColor="#898989"
                        android:textSize="13sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/fund_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jijin_layout"
                    android:layout_marginTop="5dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/icon_fund"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/personal_icon_fund" />
                    <TextView
                        android:id="@+id/fund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_fund"
                        android:layout_marginLeft="5dp"
                        android:text="旅游基金"
                        android:textColor="#7f7f7f"
                        android:textSize="14sp" />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
