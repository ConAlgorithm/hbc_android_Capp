<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_size_large">

    <RelativeLayout
        android:id="@+id/coupon_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/coupon_yes">

        <RelativeLayout
            android:id="@+id/coupon_item_title_layout"
            android:layout_width="@dimen/coupon_item_titlel_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/basic_margin_large"
            android:layout_marginTop="@dimen/text_size_large">

            <TextView
                android:id="@+id/coupon_item_title"
                android:layout_width="@dimen/coupon_item_title_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="优惠券"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/coupon_item_title_layout"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coupon_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="@dimen/text_size_xlarge" />

            </LinearLayout>

            <TextView
                android:id="@+id/coupon_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/basic_margin_large"
                android:layout_marginRight="@dimen/basic_margin_large"
                android:layout_marginTop="@dimen/basic_margin_small"
                android:text="单笔订单满10000元可用此券抵扣1000元"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/coupon_item_date_between"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/basic_margin_small"
                android:text="有效期：2015.05.05 至 2015.05.20"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/coupon_item_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:src="@mipmap/coupon_selected" />
</RelativeLayout>
