<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ImageView
        android:id="@+id/home_side_menu_iv"
        android:layout_width="24dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/header_menu"
        />
    <com.hugboga.custom.widget.RevealBackgroundView
        android:id="@+id/home_reveal_view"
        android:background="#00000000"
        android:layout_toRightOf="@id/home_side_menu_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    </com.hugboga.custom.widget.RevealBackgroundView>
    <LinearLayout
        android:id="@+id/home_search_layout"
        android:layout_toRightOf="@id/home_side_menu_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@mipmap/search_box_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#a3a3a3"
            android:text="@string/home_search_hint"
            />
        </LinearLayout>

    <ImageView
        android:id="@+id/home_search_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/home_search_icon"
        />
</merge>