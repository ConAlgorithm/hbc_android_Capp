<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sku_item_display_iv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:background="@color/default_img_bg" />

    <LinearLayout
        android:id="@+id/sku_item_city_guides_layout"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_sku_list_guide_amount"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/sku_item_city_guides_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sku_list_city_guides_1"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:text="@string/sku_list_city_guides_2"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sku_item_display_iv"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sku_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#ffee31" />
        <TextView
            android:id="@+id/sku_item_price_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="1dp"
            android:textSize="12sp"
            android:textColor="#ffee31"
            android:text="@string/sku_list_price_unit"/>
        <View
            android:id="@+id/sku_item_vertical_price_line"
            android:layout_width="1px"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="#ffee31"/>

        <ImageView
            android:id="@+id/sku_item_reserve_iv"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/city_lightning"
            />
        <TextView
            android:id="@+id/sku_item_reserve_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="1dp"
            android:textSize="12sp"
            android:textColor="#ffee31" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/sku_item_display_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/sku_item_describe_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sku_item_headLable_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="#7700ff00"
                android:textSize="12sp"
                android:textColor="#ffffff" />
            <com.hugboga.custom.widget.TagGroup
                android:id="@+id/sku_item_taggroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="13.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:horizontalSpacing="15dp"
                app:verticalSpacing="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_top"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fillet_bottom"/>
</merge>