<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffab6f">
    <TextView
        android:id="@+id/travel_fund_residue_price_hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:text="@string/travel_fund_residue_price"
        android:textColor="#ffffff"
        android:textSize="13sp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:id="@+id/travel_fund_residue_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="28sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/travel_fund_invite_tv"
            android:layout_width="82dp"
            android:layout_height="27dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/travel_fund_residue_price_tv"
            android:src="@mipmap/icon_travelfund_invitation"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#11ffffff">

        <View
            android:id="@+id/accumulative_middle_line_view"
            android:layout_width="1px"
            android:layout_height="32dp"
            android:background="#ffffff"
            android:layout_centerInParent="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/accumulative_middle_line_view"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/travel_fund_incentive_price"
                android:textColor="#ffffff"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/record_invited_incentive_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/accumulative_middle_line_view"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/record_invited_used_price_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/travel_fund_used_price"
                android:textColor="#ffffff"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/record_invited_used_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#ffffff"
                android:textSize="22sp"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#ffffff">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/record_invited_incentive_record_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/accumulative_middle_line_view"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/record_invited_incentive_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/travel_fund_incentive_record"
                android:textColor="#ffab6c"
                android:textSize="15sp" />
            <View
                android:id="@+id/record_invited_incentive_record_line"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_record_invited_tab_line"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_invited_used_record_layout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/accumulative_middle_line_view"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/record_invited_used_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/travel_fund_used_record"
                android:textColor="@color/default_black"
                android:textSize="14sp" />
            <View
                android:id="@+id/record_invited_used_record_line"
                android:layout_width="50dp"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:background="@drawable/bg_record_invited_tab_line"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/travel_fund_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingBottom="50dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/travel_fund_empty_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/travelfund_empty"
            />
        <TextView
            android:id="@+id/travel_fund_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#8a8a8a"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/travel_fund_empty_get_iv"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="@string/travel_fund_gain"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/selector_travel_fund_empty_get"
            />
    </LinearLayout>
</LinearLayout>