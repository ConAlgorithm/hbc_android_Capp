<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/city_home_list_item_worry_lay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/allbg_white"
        android:paddingLeft="36px"
        android:paddingRight="36px"
        android:paddingTop="40px"
        >
        <ImageView
            android:id="@+id/city_home_list_item_image_first"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="345px"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/city_home_list_item_route_name_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_home_list_item_image_first"
            android:layout_marginTop="46px"
            android:textSize="@dimen/text_size_mediumx"
            android:hint="sdsfdsa"
            android:textColor="#111111"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/city_home_list_item_route_name_TV"
            android:layout_marginTop="36px"
            android:paddingBottom="60px"
            >
            <TextView
                android:id="@+id/city_home_list_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000000"
                android:textColor="@color/basic_red"
                android:textSize="@dimen/text_size_medium"
                />
            <TextView
                android:id="@+id/city_home_list_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/city_home_item_guides_count"
            android:layout_width="326px"
            android:layout_height="56px"
            android:drawableRight="@mipmap/sidao"
            android:layout_alignBottom="@+id/city_home_list_item_image_first"
            android:background="@drawable/bg_city_home_guides_count"
            android:layout_marginBottom="36px"
            android:textColor="#999999"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/city_home_item_head_lable"
            android:layout_width="120px"
            android:layout_height="44px"
            android:layout_alignTop="@+id/city_home_list_item_image_first"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:text="@string/city_home_head_lable_worry"
            android:textColor="#ffffff"
            android:background="@drawable/bg_city_home_lable_green"
            />

    </RelativeLayout>
    <View
        android:layout_below="@+id/city_home_list_item_worry_lay"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="@color/allbg_gray"
        android:layout_alignParentBottom="true" />
</LinearLayout>