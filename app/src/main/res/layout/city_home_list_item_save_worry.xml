<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basic_white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/city_home_list_item_worry_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@color/allbg_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/city_home_list_item_image_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/city_default_bg" />

        <TextView
            android:id="@+id/city_home_item_head_lable"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_city_home_lable_green"
            android:gravity="center"
            android:text="@string/city_home_head_lable_worry"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/city_home_item_guides_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_city_home_guides_count"
            android:drawableRight="@mipmap/sidao"
            android:drawablePadding="8dp"
            android:padding="5dp"
            android:textColor="@color/basic_white" />
    </FrameLayout>

    <TextView
        android:id="@+id/city_home_list_item_route_name_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#111111"
        android:textSize="@dimen/text_size_largex" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="18dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_rmb"
            android:textColor="#ff6633" />
        <TextView
            android:id="@+id/city_home_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff6633"
            android:textSize="@dimen/text_size_largex" />
        <TextView
            android:id="@+id/city_home_list_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/allbg_gray" />
</LinearLayout>