<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        style="@style/skuInfoLayout"
        >
        <TextView
            android:id="@+id/sku_start_time_star"
            style="@style/skuInfoStar"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/sku_start_time_title"
            style="@style/skuInfoTitle"
            android:layout_toRightOf="@id/sku_start_time_star"
            android:text="上车时间"
            />
        <ImageView
            android:id="@+id/sku_start_time_arrow"
            style="@style/skuInfoArrow"
            />
        <EditText
            android:id="@+id/sku_start_edit"
            style="@style/skuInfoEdit"
            android:layout_toRightOf="@id/sku_start_time_title"
            android:layout_toLeftOf="@id/sku_start_time_arrow"
            android:hint="8：00（当地时间）"
            />
    </RelativeLayout>
    <View style="@style/skuInfoLine"/>
    <RelativeLayout
        style="@style/skuInfoLayout"
        >
        <TextView
            android:id="@+id/sku_passenger_number_star"
            style="@style/skuInfoStar"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/sku_passenger_number_title"
            style="@style/skuInfoTitle"
            android:layout_toRightOf="@id/sku_passenger_number_star"
            android:text="乘坐人数"
            />
    </RelativeLayout>
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
         android:layout_marginLeft="20dp"
        android:background="@drawable/textbox"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/submit_adult_sub"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="—"
            android:textColor="@color/basic_black"
            android:textSize="@dimen/text_size_xlarge" />

        <View style="@style/v_line" />

        <EditText
            android:id="@+id/submit_adult_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:editable="false"
            android:focusable="false"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/basic_margin_small"
            android:paddingRight="@dimen/basic_margin_small"
            android:text="成人0"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/change_mobile_text"
            android:textColorHint="@color/change_mobile_hint" />

        <View style="@style/v_line" />

        <TextView
            android:id="@+id/submit_adult_plus"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/basic_black"
            android:textSize="@dimen/text_size_xlarge" />
    </LinearLayout>

</LinearLayout>