<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/allbg_white"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/allbg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/setting_menu_layout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/setOrChangPwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_chang_pwd"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/red_point1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_toRightOf="@+id/setOrChangPwd"
                    android:layout_marginLeft="-3dp"
                    android:background="@drawable/red_set_pwd"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/personalcenter_right" />
            </RelativeLayout>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/change_again"
                android:background="#e5e5e5" />
            <RelativeLayout
                android:id="@+id/setting_menu_layout7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_clear_cache"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="15sp" />
                <ImageView
                    android:id="@+id/setting_clear_cache_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/personalcenter_right"
                    />
                <TextView
                    android:id="@+id/setting_menu_clear_cache_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/basic_margin_large"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/setting_clear_cache_arrow"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/basic_gray"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/change_again"
                android:background="#e5e5e5" />
            <RelativeLayout
                android:id="@+id/setting_menu_layout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_feedback"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/personalcenter_right" />
            </RelativeLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/change_again"
                android:background="#e5e5e5" />
            <RelativeLayout
                android:id="@+id/setting_menu_layout5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_about"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/setting_about_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/personalcenter_right"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/setting_menu_version_content_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/setting_about_arrow"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/basic_gray" />
            </RelativeLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/change_again"
                android:background="#e5e5e5" />
            <RelativeLayout
                android:id="@+id/setting_menu_developer_layout"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_developer"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/setting_developer_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/personalcenter_right" />
            </RelativeLayout>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/change_again"
                android:background="#e5e5e5" />
            <RelativeLayout
                android:id="@+id/setting_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_exit"
                    android:textColor="@color/common_font_color_black"
                    android:textSize="15sp" />
            </RelativeLayout>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/change_again"
                android:background="#e5e5e5" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
