<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin_xlarge"
    android:layout_marginRight="@dimen/default_margin_xlarge"
    android:layout_marginTop="@dimen/default_margin_medium"
    android:background="@mipmap/background"
    android:orientation="vertical"
    android:padding="@dimen/default_margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/domestic_item_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/add_name_close" />

        <TextView
            android:id="@+id/domestic_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_small"
            android:text="招商银行"
            android:textColor="#111111"
            android:textSize="@dimen/text_size_largex" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_margin_small"
            android:layout_weight="1"
            android:text="I 信用卡"
            android:textColor="#111111"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/domestic_item_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="********8990"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout>