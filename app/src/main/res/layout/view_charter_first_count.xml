<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/SkuOrderSubtitleTextView"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:paddingLeft="@dimen/order_padding_left"
        android:paddingRight="@dimen/order_padding_left"
        android:text="@string/daily_people_count" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_min_item_hight"
        android:paddingLeft="@dimen/sku_order_padding_left"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/daily_adult"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <com.hugboga.custom.widget.ChooseCountView
            android:id="@+id/charter_first_count_adult_choose_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_min_item_hight"
        android:paddingLeft="@dimen/sku_order_padding_left"
        android:background="#ffffff">

        <TextView
            android:id="@+id/charter_first_count_child_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/daily_child"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/charter_first_count_child_title_tv"
            android:text="@string/daily_child_hint"
            android:textColor="@color/default_black"
            android:textSize="12sp" />

        <com.hugboga.custom.widget.ChooseCountView
            android:id="@+id/charter_first_count_child_choose_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/default_dividing_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/charter_first_count_child_seat_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_min_item_hight"
        android:paddingLeft="@dimen/sku_order_padding_left"
        android:background="#ffffff">

        <TextView
            android:id="@+id/charter_first_count_child_seat_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/daily_child_seat"
            android:textColor="@color/default_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/charter_first_count_child_seat_title_tv"
            android:text="@string/daily_child_seat_hint"
            android:textColor="@color/default_black"
            android:textSize="12sp" />

        <com.hugboga.custom.widget.ChooseCountView
            android:id="@+id/charter_first_count_child_seat_choose_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/charter_first_count_child_seat_hint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_sku_order_count_dash"
            android:layerType="software" />

        <TextView
            android:id="@+id/charter_first_count_child_seat_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#fff8e7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/sku_order_padding_left"
            android:text="@string/daily_child_seat_nonsupport"
            android:textColor="@color/default_yellow"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shape_sku_order_count_dash"
            android:layerType="software" />
    </LinearLayout>

    <TextView
        android:id="@+id/charter_first_count_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/order_car_popbg"
        android:gravity="center"
        android:lineSpacingExtra="1dp"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>