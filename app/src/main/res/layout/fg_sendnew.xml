<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e1e2"
    android:clickable="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e1e2"
        android:layout_above="@id/bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="#e0e1e2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_address"
                android:background="@color/basic_white"
                android:layout_width="wrap_content"
                android:minHeight="60dp"
                android:clickable="true"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/address_left"
                    android:text="@string/air_end_address"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:minEms="4"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/address_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:minHeight="60dp"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:clickable="true"
                    android:layout_toRightOf="@id/address_left"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/address_tips"
                        android:hint="@string/air_go_where"
                        android:textColorHint="#9d9e9f"
                        android:textSize="15sp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/basic_black"
                        android:minEms="4"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:layout_width="wrap_content"
                android:minHeight="60dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/info_left"
                    android:text="@string/air_start_address"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:minEms="4"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/air_send_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_toRightOf="@id/info_left"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/info_tips"
                        android:text="@string/air_start_where"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#9d9e9f"
                        android:minEms="4"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/air_title"
                        android:text="@string/air_info"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:clickable="true"
                        android:visibility="gone"
                        android:textColor="@color/basic_black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/air_detail"
                        android:text="@string/air_info"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#9d9e9f"
                        android:minEms="4"
                        android:clickable="true"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_starttime"
                android:layout_marginTop="1dp"
                android:background="@color/basic_white"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:minHeight="60dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time_left"
                    android:text="@string/air_start_time"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:minEms="4"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/time_layout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:layout_toRightOf="@id/time_left"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_text"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:minEms="4"
                        android:textColorHint="#9d9e9f"
                        android:hint="@string/air_choose_go_time"
                        android:textColor="@color/basic_black"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/show_cars_layout_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/basic_white"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/include_pick_send_bottom_bar" />
</RelativeLayout>