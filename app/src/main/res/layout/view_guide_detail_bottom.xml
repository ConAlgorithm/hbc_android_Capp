<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/guide_detail_bottom_top_line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line" />

    <TextView
        android:id="@+id/guide_detail_bottom_hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdf9db"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="优秀司导都在服务用户的路上，预订后沟通更高效"
        android:textColor="#a2a19e"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_bottom_height"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:paddingLeft="@dimen/order_bottom_padding_left">

        <TextView
            android:id="@+id/guide_detail_bottom_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:text="当地时间"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/guide_detail_bottom_contact_layout"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/order_bottom_padding_left"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rounded_yellow_btn"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/guide_detail_bottom_contact_iv"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@mipmap/navbar_chat_white" />

            <TextView
                android:id="@+id/guide_detail_bottom_contact_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:text="联系我"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/guide_detail_bottom_choose_guide_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/order_bottom_padding_left"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_rounded_yellow_btn"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="15sp"
            android:text="选TA服务" />
    </RelativeLayout>
</merge>