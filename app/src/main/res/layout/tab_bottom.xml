<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout style="@style/TabBottomLayoutStyle">

            <TextView
                android:id="@+id/tab_text_1"
                style="@style/TabBottomTextStyle"
                android:drawableTop="@drawable/tab_menu_1_selector"
                android:text="@string/tab_home" />
        </RelativeLayout>

        <RelativeLayout style="@style/TabBottomLayoutStyle">

            <TextView
                android:id="@+id/tab_text_2"
                style="@style/TabBottomTextStyle"
                android:drawableTop="@drawable/tab_menu_des_selector"
                android:text="@string/tab_des" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/TabBottomLayoutStyle"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tab_text_3"
                style="@style/TabBottomTextStyle"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@drawable/tab_menu_2_selector"
                android:text="@string/tab_chat" />

            <TextView
                android:id="@+id/bottom_point_2"
                android:layout_width="wrap_content"
                android:minWidth="@dimen/letter_img_point_width_x"
                android:layout_height="@dimen/letter_img_point_width_x"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/tab_text_3"
                android:background="@mipmap/tabbar_number"
                android:gravity="center"
                android:textColor="@color/basic_white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bottom_point_3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/tab_text_3"
                android:background="@mipmap/tabbar_number"
                android:gravity="center"
                android:textColor="@color/basic_white"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout style="@style/TabBottomLayoutStyle">

            <TextView
                android:id="@+id/tab_text_4"
                style="@style/TabBottomTextStyle"
                android:drawableTop="@drawable/tab_menu_3_selector"
                android:text="@string/tab_journey" />
        </RelativeLayout>

        <RelativeLayout style="@style/TabBottomLayoutStyle">

            <TextView
                android:id="@+id/tab_text_5"
                style="@style/TabBottomTextStyle"
                android:drawableTop="@drawable/tab_menu_4_selector"

                android:text="@string/tab_space" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
