<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/default_margin_medium"
    android:paddingTop="@dimen/default_margin_medium">

    <RelativeLayout style="@style/TabBottomLayoutStyle">

        <TextView
            android:id="@+id/tab_text_1"
            style="@style/TabBottomTextStyle"
            android:drawableTop="@drawable/tab_menu_1_selector"
            android:text="@string/tab_find" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/TabBottomLayoutStyle"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tab_text_2"
            style="@style/TabBottomTextStyle"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/tab_menu_2_selector"
            android:text="@string/tab_chat" />
        <TextView
            android:id="@+id/bottom_point_2"
            android:layout_width="@dimen/letter_img_point_width"
            android:layout_height="@dimen/letter_img_point_width"
            android:background="@mipmap/tabbar_number"
            android:layout_toRightOf="@id/tab_text_2"
            android:layout_marginLeft="-5dp"
            android:gravity="center"
            android:textColor="@color/basic_white"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout style="@style/TabBottomLayoutStyle">

        <TextView
            android:id="@+id/tab_text_3"
            style="@style/TabBottomTextStyle"
            android:drawableTop="@drawable/tab_menu_3_selector"
            android:text="@string/tab_journey" />
    </RelativeLayout>

</LinearLayout>
