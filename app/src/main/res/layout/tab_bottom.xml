<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >
    <RelativeLayout
        style="@style/TabBottomLayoutStyle"
        >
        <TextView
            android:id="@+id/tab_text_1"
            style="@style/TabBottomTextStyle"
            android:drawableTop="@drawable/tab_menu_1_selector"
            android:text="@string/title_pick"
            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/TabBottomLayoutStyle"
        >
        <TextView
            android:id="@+id/tab_text_2"
            style="@style/TabBottomTextStyle"
            android:drawableTop="@drawable/tab_menu_2_selector"
            android:text="@string/title_pick" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/TabBottomLayoutStyle"
        >
        <TextView
            android:id="@+id/tab_text_3"
            style="@style/TabBottomTextStyle"
            android:drawableTop="@drawable/tab_menu_3_selector"
            android:text="@string/title_pick" />
    </RelativeLayout>

</LinearLayout>
