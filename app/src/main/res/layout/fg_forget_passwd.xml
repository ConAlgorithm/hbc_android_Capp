<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_login_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/change_mobile_margin"
        android:paddingRight="@dimen/change_mobile_margin"
        android:paddingTop="@dimen/change_mobile_top"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/forget_passwd_mobile_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_mobile_textbox_height"
            android:layout_marginTop="@dimen/change_mobile_top"
            android:background="@drawable/textbox"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forget_passwd_areacode"
                android:layout_width="@dimen/change_mobile_areacode_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="区号"
                android:paddingLeft="@dimen/basic_margin_medium"
                android:text="+86"
                android:textColor="@color/change_mobile_text"
                android:textColorHint="@color/change_mobile_hint"
                android:textSize="@dimen/text_size_large" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/basic_margin_medium"
                android:layout_marginTop="@dimen/basic_margin_medium"
                android:background="@color/change_mobile_line" />

            <EditText
                android:id="@+id/forget_passwd_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="填写手机号"
                android:inputType="number"
                android:paddingLeft="@dimen/basic_margin_medium"
                android:textColor="@color/change_mobile_text"
                android:textColorHint="@color/change_mobile_hint" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/forget_passwd_getcode_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_mobile_textbox_height"
            android:layout_below="@id/forget_passwd_mobile_layout"
            android:layout_marginTop="@dimen/change_mobile_top"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/forget_getcode_view"
                android:layout_width="@dimen/change_mobile_getcode_width"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/forget_passwd_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/change_mobile_getcode"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/forget_passwd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="60秒"
                    android:textColor="#9E9D9C"
                    android:visibility="gone" />
            </RelativeLayout>

            <EditText
                android:id="@+id/forget_passwd_verity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/basic_margin_large"
                android:layout_toLeftOf="@id/forget_getcode_view"
                android:background="@drawable/textbox"
                android:hint="验证码(4位数字)"
                android:inputType="number"
                android:maxEms="4"
                android:paddingLeft="@dimen/basic_margin_medium"
                android:textColor="@color/change_mobile_text"
                android:textColorHint="@color/change_mobile_hint" />
        </RelativeLayout>

        <EditText
            android:id="@+id/forget_passwd_newpass_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/change_mobile_textbox_height"
            android:layout_below="@id/forget_passwd_getcode_layout"
            android:layout_marginTop="@dimen/change_mobile_top"
            android:background="@drawable/textbox"
            android:hint="设置新密码"
            android:inputType="textPassword"
            android:maxEms="4"
            android:paddingLeft="@dimen/basic_margin_medium"
            android:textColor="@color/change_mobile_text"
            android:textColorHint="@color/change_mobile_hint" />

        <Button
            android:id="@+id/forget_passwd_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forget_passwd_newpass_layout"
            android:layout_marginTop="@dimen/basic_margin_xlarge"
            android:background="@drawable/login_selector_bg"
            android:text="重置密码"
            android:textColor="@color/basic_white"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/basic_margin_xlarge"
            android:text="@string/call_info_tip"
            android:textColor="@color/basic_call_tip"
            android:textSize="@dimen/text_size_large" />
    </RelativeLayout>

</LinearLayout>