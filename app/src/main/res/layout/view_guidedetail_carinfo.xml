<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/default_dividing_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="车辆信息"
        android:textColor="#000000"
        android:textSize="18sp" />

    <com.hugboga.custom.widget.GuideCarInfoItemView
        android:id="@+id/guide_detail_car_info_item_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.hugboga.custom.widget.GuideCarInfoItemView
        android:id="@+id/guide_detail_car_info_item_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/guide_detail_car_info_more_tv"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:text="显示更多"
        android:background="@drawable/selector_evaluate_more_comments"
        />
</LinearLayout>