<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home_route_item_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:background="@drawable/shape_home_route_guide_avatar_bg"
        android:layout_alignBottom="@id/home_route_item_bg_iv"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_route_item_guide_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/home_route_item_guide_avatar_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="1dp"
            android:scaleType="centerInside"
            android:src="@mipmap/home_guide_default_avatar" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_route_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@id/home_route_item_bg_iv"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#111111"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_below="@id/home_route_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="18dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_rmb"
            android:textSize="10sp"
            android:textColor="#ff6633" />
        <TextView
            android:id="@+id/home_route_item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ff6633" />

        <TextView
            android:id="@+id/home_route_item_other_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"
            android:textColor="#999999" />
    </LinearLayout>
</RelativeLayout>