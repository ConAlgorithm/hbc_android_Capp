<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.hugboga.custom.widget.LinearGradientImageView
            android:id="@+id/home_route_item_display_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_img_bg"
            android:scaleType="centerCrop"
            app:gradient_orientation="left"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            >
            <TextView
                android:id="@+id/home_route_item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/home_route_item_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/home_route_item_guideamount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="#e6d62e"
                />
            </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_route_item_1_layout"
        android:paddingLeft="@dimen/home_view_padding_left"
        android:paddingRight="@dimen/home_view_padding_left"
        android:background="@drawable/selector_default_white_bg"
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <TextView
            android:id="@+id/home_route_item_unit_1_tv"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ec0021"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:text="/人"/>
        <TextView
            android:id="@+id/home_route_item_price_1_tv"
            android:layout_toLeftOf="@id/home_route_item_unit_1_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ec0021"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="¥ 2323"/>
        <TextView
            android:id="@+id/home_route_item_cotent_1_tv"
            android:layout_toLeftOf="@id/home_route_item_price_1_tv"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/home_route_item_1_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"
        />
    <RelativeLayout
        android:id="@+id/home_route_item_2_layout"
        android:paddingLeft="@dimen/home_view_padding_left"
        android:paddingRight="@dimen/home_view_padding_left"
        android:background="@drawable/selector_default_white_bg"
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <TextView
            android:id="@+id/home_route_item_unit_2_tv"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ec0021"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:text="/人"/>
        <TextView
            android:id="@+id/home_route_item_price_2_tv"
            android:layout_toLeftOf="@id/home_route_item_unit_2_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ec0021"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/home_route_item_cotent_2_tv"
            android:layout_toLeftOf="@id/home_route_item_price_2_tv"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/home_route_item_2_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"
        />
    <RelativeLayout
        android:id="@+id/home_route_item_3_layout"
        android:paddingLeft="@dimen/home_view_padding_left"
        android:paddingRight="@dimen/home_view_padding_left"
        android:background="@drawable/selector_default_white_bg"
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <TextView
            android:id="@+id/home_route_item_unit_3_tv"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ec0021"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:text="/人"/>
        <TextView
            android:id="@+id/home_route_item_price_3_tv"
            android:layout_toLeftOf="@id/home_route_item_unit_3_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="#ec0021"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/home_route_item_cotent_3_tv"
            android:layout_toLeftOf="@id/home_route_item_price_3_tv"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/home_route_item_3_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/default_dividing_line"
        />
    <RelativeLayout
        android:id="@+id/home_route_item_more_layout"
        android:paddingLeft="@dimen/home_view_padding_left"
        android:paddingRight="@dimen/home_view_padding_left"
        android:background="@drawable/selector_default_white_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#afafaf"
            android:textSize="14sp"
            android:text="@string/home_more_featured_route"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/home_morelist"
            android:layout_width="22dp"
            android:layout_height="5dp" />
    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_top"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fillet_bottom"
        />
</merge>