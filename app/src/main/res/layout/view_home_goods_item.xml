<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/home_goods_layout"
    android:background="@drawable/shape_gray_stroke"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="9dp"
    android:paddingRight="9dp"
    android:paddingTop="9dp">

    <ImageView
        android:id="@+id/home_goods_desplay_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_pic_gray"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/home_goods_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:ellipsize="end"
        android:gravity="bottom"
        android:singleLine="true"
        android:textColor="@color/default_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/home_goods_subtitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ellipsize="end"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="#747474"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/home_goods_price_tv"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#000000"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="13sp" />
</LinearLayout>
