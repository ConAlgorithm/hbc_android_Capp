<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/header_left_btn"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="match_parent"
        android:padding="@dimen/default_margin_xlarge"
        android:src="@mipmap/top_back_black" />
    <ImageView
        android:id="@+id/header_right_btn"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@mipmap/topbar_collect_share"
        android:visibility="gone" />
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/header_right_btn"
        android:layout_marginLeft="@dimen/default_margin_small"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/header_left_btn"
        android:textColor="@color/basic_black"
        android:textSize="@dimen/text_size_largex" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/header_right_txt"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/default_margin_large"
        android:paddingRight="@dimen/default_margin_large"
        android:text="@string/contact_service"
        android:textColor="@color/basic_black"
        android:textSize="@dimen/text_size_large"
        android:visibility="invisible" />

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_gray_bfc2c5"/>
</RelativeLayout>
