<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="28dip"
    android:paddingRight="28dip">

    <net.grobas.view.PolygonImageView
        android:id="@+id/travelfund_avatar_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/collection_icon_pic"
        app:poly_border="false"
        app:poly_border_color="@android:color/white"
        app:poly_border_width="5dp"
        app:poly_corner_radius="5"
        app:poly_rotation_angle="25"
        app:poly_shadow="false"
        app:poly_shadow_color="@android:color/black"
        app:poly_vertices="0" />

    <TextView
        android:id="@+id/travelfund_amount_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingTop="4dp"
        android:text="@string/yuan"
        android:textColor="@color/invite_friends_basic"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/travelfund_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/travelfund_amount_unit_tv"
        android:textStyle="bold"
        android:textColor="@color/invite_friends_basic"
        android:textSize="18sp"
        android:text="0"
        />
    <TextView
        android:id="@+id/travelfund_amount_sign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/travelfund_amount_tv"
        android:layout_centerVertical="true"
        android:text="+"
        android:textColor="@color/invite_friends_basic"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@id/travelfund_amount_sign_tv"
        android:layout_toRightOf="@id/travelfund_avatar_iv"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/travelfund_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/travelfund_source_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/invite_friends_basic"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/travelfund_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#44999999" />
</RelativeLayout>