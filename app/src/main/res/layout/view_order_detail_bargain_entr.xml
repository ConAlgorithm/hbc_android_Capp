<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_bargain_entr_layout"
    android:layout_width="70dp"
    android:layout_height="102dp"
    android:paddingLeft="12dp"
    android:background="@mipmap/bargain_entr_bg">
    <TextView
        android:id="@+id/detail_bargain_entr_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#ffffff"
        />
    <TextView
        android:id="@+id/detail_bargain_entr_price_tv"
        android:layout_below="@id/detail_bargain_entr_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="-1dp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        />
    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/detail_bargain_entr_countdown_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        app:isHideTimeBackground="true"
        app:isShowTimeBgDivisionLine="false"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:timeTextColor="#ffffff"
        app:timeTextSize="10sp"
        app:suffixLRMargin="2dp"
        app:suffixGravity="bottom"
        app:suffixTextColor="#ffffff"
        app:suffixTextSize="11sp" />
</RelativeLayout>