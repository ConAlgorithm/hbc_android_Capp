<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/basic_white"
    android:layout_height="match_parent">

    <include layout="@layout/include_header"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#2d2b24"
        android:gravity="center"
        android:layout_height="60dp">

        <RadioButton
            android:id="@+id/address_radio"
            android:text="@string/choose_by_address"
            android:layout_width="120dp"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/radio_left_choose"
            android:textColor="@color/choose_air"
            android:button="@null"
            android:layout_height="30dp" />

        <RadioButton
            android:id="@+id/number_radio"
            android:text="@string/choose_by_air_no"
            android:layout_width="120dp"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/radio_right_choose"
            android:textColor="@color/choose_air"
            android:button="@null"
            android:layout_height="30dp" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/choose_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>