<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/basic_white"
    android:layout_height="match_parent">

    <include layout="@layout/include_header"/>

    <LinearLayout
        android:id="@+id/header_center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="#2d2b24"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/daily_layout_1"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/daily_tap_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/choose_by_address"
                android:textColor="@color/basic_white"
                android:textSize="15sp" />

            <View
                android:id="@+id/daily_tap_line1"
                android:layout_width="60dip"
                android:layout_height="2dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/basic_white" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:visibility="gone"
            android:layout_height="15dp" android:background="#878787" />

        <RelativeLayout
            android:id="@+id/daily_layout_2"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/daily_tap_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/choose_by_air_no"
                android:textColor="#878787"
                android:textSize="15sp" />

            <View
                android:id="@+id/daily_tap_line2"
                android:layout_width="50dip"
                android:layout_height="2dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/basic_white"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
