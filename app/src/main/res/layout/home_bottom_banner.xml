<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/allbg_white"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="20dp">

    <FrameLayout
        android:id="@+id/home_bottom_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_bottom_banner_img"
            android:layout_width="328dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@color/all_bg_yellow"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/name_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="呼朋唤友｜抢红包"
                android:textColor="#ffffff"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/purchse_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:text="邀请好友，各得100元通用劵"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>