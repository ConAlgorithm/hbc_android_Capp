<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/home_view_padding_left"
        android:paddingRight="@dimen/home_view_padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="热门目的地"
            android:textColor="#111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_hotcity_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="查看更多"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/home_hotcity_more_tv"
            android:background="@mipmap/home_search_icon" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_hotcity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:clipChildren="false" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/home_hotcity_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dip"
        res:centered="true"
        res:fillColor="#aaaaaa"
        res:pageColor="#00ffffff"
        res:radius="2.5dip"
        res:strokeColor="#aaaaaa"
        res:strokeWidth="0.5dip" />
</LinearLayout>